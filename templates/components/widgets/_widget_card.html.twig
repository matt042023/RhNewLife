{#
    Reusable widget card component

    Parameters:
    - title: Widget title
    - icon: SVG icon HTML (optional)
    - icon_color: Tailwind color class for icon background (default: bg-blue-100 text-blue-600)
    - badge: Badge text (optional)
    - badge_color: Badge color class (default: bg-blue-100 text-blue-800)
    - actions: Array of action links [{label, url, type}] (optional)
    - loading: Boolean to show loading state (optional)
#}

{% set widget_icon_color = icon_color|default('bg-blue-100 text-blue-600 dark:bg-blue-900 dark:text-blue-300') %}
{% set widget_badge_color = badge_color|default('bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300') %}

<div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 shadow-sm hover:shadow-md transition-shadow duration-200">
    {# Card header #}
    <div class="p-4 border-b border-gray-200 dark:border-gray-700">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
                {% if icon is defined %}
                    <div class="flex-shrink-0 w-10 h-10 rounded-lg {{ widget_icon_color }} flex items-center justify-center">
                        {{ icon|raw }}
                    </div>
                {% endif %}
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                    {{ title }}
                </h3>
            </div>
            {% if badge is defined %}
                <span class="px-2.5 py-0.5 text-xs font-medium rounded-full {{ widget_badge_color }}">
                    {{ badge }}
                </span>
            {% endif %}
        </div>
    </div>

    {# Card content #}
    <div class="p-4">
        {% if loading is defined and loading %}
            {# Loading state #}
            <div class="flex items-center justify-center py-8">
                <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
                <span class="ml-3 text-gray-600 dark:text-gray-400">Chargement...</span>
            </div>
        {% else %}
            {# Widget content #}
            {% block widget_content %}
                <p class="text-gray-500 dark:text-gray-400 text-sm">Contenu du widget</p>
            {% endblock %}
        {% endif %}
    </div>

    {# Card footer with actions #}
    {% if actions is defined and actions|length > 0 %}
        <div class="p-4 bg-gray-50 dark:bg-gray-700 border-t border-gray-200 dark:border-gray-600">
            <div class="flex flex-wrap gap-2">
                {% for action in actions %}
                    {% set action_type = action.type|default('secondary') %}
                    {% if action_type == 'primary' %}
                        <a href="{{ action.url }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-lg focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                            {{ action.label }}
                            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    {% elseif action_type == 'danger' %}
                        <a href="{{ action.url }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-red-600 hover:bg-red-700 rounded-lg focus:ring-4 focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">
                            {{ action.label }}
                        </a>
                    {% elseif action_type == 'success' %}
                        <a href="{{ action.url }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-green-600 hover:bg-green-700 rounded-lg focus:ring-4 focus:ring-green-300 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800">
                            {{ action.label }}
                        </a>
                    {% else %}
                        <a href="{{ action.url }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 hover:bg-gray-100 hover:text-blue-700 rounded-lg focus:ring-4 focus:ring-gray-200 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700">
                            {{ action.label }}
                        </a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>
