{#
    Document Replace Modal Component

    Usage:
    {% include 'components/modals/document_replace.html.twig' %}
#}

{# Replace Modal #}
<div id="replaceModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 z-50 flex items-center justify-center p-4"
     onclick="if(event.target === this) { this.classList.add('hidden'); document.body.style.overflow = ''; }">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-3xl w-full">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 flex items-center justify-between">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Remplacer le document</h3>
            <button type="button"
                    onclick="document.getElementById('replaceModal').classList.add('hidden'); document.body.style.overflow = '';"
                    class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        <form method="post" id="replaceForm" enctype="multipart/form-data" action=""
              data-controller="document-replace"
              data-document-replace-target="form"
              data-action="submit->document-replace#submit">
            <input type="hidden" name="document_id" value="">
            <div class="px-6 py-4 space-y-4">
                <p class="text-sm text-gray-600 dark:text-gray-300">
                    Le fichier actuel sera remplacé. L'ancienne version sera conservée dans l'historique.
                </p>
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Nouveau fichier <span class="text-red-500">*</span>
                    </label>
                    <input type="file" name="file" required accept=".pdf,.jpg,.jpeg,.png,.doc,.docx"
                           class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white">
                </div>
            </div>
            <div class="px-6 py-4 bg-gray-50 dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700 flex justify-end gap-3">
                <button type="button"
                        onclick="document.getElementById('replaceModal').classList.add('hidden'); document.body.style.overflow = '';"
                        class="px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors">
                    Annuler
                </button>
                <button type="submit"
                        data-document-replace-target="submitButton"
                        class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors">
                    Remplacer
                </button>
            </div>
        </form>
    </div>
</div>
