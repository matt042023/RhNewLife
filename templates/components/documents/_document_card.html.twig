{#
    Document Card Component

    Carte de document réutilisable adaptable selon le contexte et le layout

    Parameters:
    - document: Entity Document (peut être null pour carte vide)
    - item: Objet avec type, label, uploaded, priority (alternative à document)
    - layout: 'grid' | 'list' | 'compact' (default: 'grid')
    - context: 'profile' | 'admin' (default: 'profile')
    - showActions: boolean (default: true)
    - isRequired: boolean (default: false)
    - uploadRoute: Route pour upload (si document null)
    - downloadRoute: Route pour téléchargement

    Usage:
    {% include 'components/documents/_document_card.html.twig' with {
        'document': document,
        'layout': 'grid',
        'context': 'profile',
        'showActions': true
    } %}
#}

{% set layout = layout|default('grid') %}
{% set context = context|default('profile') %}
{% set showActions = showActions|default(true) %}
{% set isRequired = isRequired|default(false) %}

{# Déterminer si on a un document ou juste un item de configuration #}
{% set hasDocument = document is defined and document is not null and document != false %}
{% set hasItem = item is defined and item is not null and item != false and item is iterable %}
{% set docType = hasDocument ? document.type : (hasItem ? (item.type|default('')) : '') %}
{% set docLabel = hasDocument ? (document.typeLabel|default(document.type)) : (hasItem ? (item.label|default('Document')) : 'Document') %}
{% set isUploaded = hasDocument or (hasItem and (item.uploaded|default(false))) %}

{# Classes CSS selon layout et statut #}
{% set borderClasses = '' %}
{% set bgClasses = '' %}

{% if isRequired %}
    {% if isUploaded %}
        {% set borderClasses = 'border-green-200 dark:border-green-800' %}
        {% set bgClasses = 'bg-green-50 dark:bg-green-900/10' %}
    {% else %}
        {% set borderClasses = 'border-red-200 dark:border-red-800' %}
        {% set bgClasses = 'bg-red-50 dark:bg-red-900/10' %}
    {% endif %}
{% else %}
    {% if isUploaded %}
        {% set borderClasses = 'border-gray-300 dark:border-gray-600' %}
        {% set bgClasses = 'bg-gray-50 dark:bg-gray-700/50' %}
    {% else %}
        {% set borderClasses = 'border-dashed border-gray-200 dark:border-gray-700' %}
        {% set bgClasses = 'bg-white dark:bg-gray-800' %}
    {% endif %}
{% endif %}

<div class="border {{ borderClasses }} {{ bgClasses }} rounded-lg p-4 hover:shadow-md transition-shadow">
    {# Header with icon and title #}
    <div class="flex items-start gap-3 mb-3">
        {% include 'components/documents/_document_type_icon.html.twig' with {
            'type': docType,
            'iconClass': layout == 'compact' ? 'w-6 h-6' : 'w-8 h-8'
        } %}

        <div class="flex-1 min-w-0">
            <h4 class="font-medium text-gray-900 dark:text-white text-sm truncate">
                {{ docLabel }}
            </h4>

            {% if hasDocument %}
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                    {{ document.uploadedAt ? document.uploadedAt|date('d/m/Y') : 'N/A' }}
                </p>
                {% include 'components/documents/_document_status_badge.html.twig' with {
                    'status': document.status,
                    'isArchived': document.isArchived|default(false)
                } %}
            {% else %}
                {% if isRequired and not isUploaded %}
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400 mt-1">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                        </svg>
                        Manquant
                    </span>
                {% else %}
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-400 mt-1">
                        Optionnel
                    </span>
                {% endif %}
            {% endif %}
        </div>
    </div>

    {# Actions #}
    {% if showActions %}
        <div class="flex flex-wrap gap-2">
            {% if hasDocument %}
                {# Document exists - show view, download, replace, delete #}
                <button type="button"
                        data-action="click->document#viewDocument"
                        data-document-id-param="{{ document.id }}"
                        class="flex-1 inline-flex items-center justify-center px-3 py-1.5 bg-blue-600 hover:bg-blue-700 text-white text-xs rounded-lg transition-colors">
                    <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                    Voir
                </button>

                <a href="{{ downloadRoute|default(path(context == 'admin' ? 'app_documents_download' : 'app_profile_documents_download', {id: document.id})) }}"
                   class="flex-1 inline-flex items-center justify-center px-3 py-1.5 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 text-xs rounded-lg transition-colors">
                    <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                    </svg>
                    DL
                </a>

                {% if is_granted('DOCUMENT_REPLACE', document) %}
                    <button type="button"
                            data-action="click->document#replaceDocument"
                            data-document-id-param="{{ document.id }}"
                            data-document-label-param="{{ docLabel }}"
                            class="w-full inline-flex items-center justify-center px-3 py-1.5 bg-yellow-100 hover:bg-yellow-200 dark:bg-yellow-900/30 dark:hover:bg-yellow-900/50 text-yellow-700 dark:text-yellow-400 text-xs rounded-lg transition-colors">
                        <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
                        </svg>
                        Remplacer
                    </button>
                {% endif %}

                {% if is_granted('DOCUMENT_DELETE', document) %}
                    <button type="button"
                            data-action="click->document#delete"
                            data-document-id-param="{{ document.id }}"
                            class="w-full inline-flex items-center justify-center px-3 py-1.5 bg-red-100 hover:bg-red-200 dark:bg-red-900/30 dark:hover:bg-red-900/50 text-red-700 dark:text-red-400 text-xs rounded-lg transition-colors">
                        <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        Supprimer
                    </button>
                {% endif %}
            {% else %}
                {# No document - show upload button #}
                <button type="button"
                        data-action="click->document#openModal"
                        data-document-modal-id-param="uploadModal"
                        data-form-type="{{ docType }}"
                        data-form-label="{{ docLabel }}"
                        class="w-full inline-flex items-center justify-center px-3 py-1.5 {{ isRequired ? 'bg-blue-600 hover:bg-blue-700 text-white' : 'bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300' }} text-xs rounded-lg font-medium transition-colors">
                    <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Ajouter
                </button>
            {% endif %}
        </div>
    {% endif %}
</div>
