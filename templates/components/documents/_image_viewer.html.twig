{# Image Viewer Component

   Usage:
   {% include 'components/documents/_image_viewer.html.twig' with {
       'document': documentObject,
       'imageUrl': path('...', {id: document.id}),
       'downloadRoute': path('...', {id: document.id}),
       'height': '600px' (optional, default: 600px)
   } %}
#}

{% set height = height|default('600px') %}
{% set imageUrl = imageUrl|default(downloadRoute) %}

<div class="bg-gray-50 dark:bg-gray-900 rounded-lg overflow-hidden"
     style="min-height: {{ height }};">

    {# Viewer toolbar #}
    <div class="flex items-center justify-between px-4 py-3 bg-gray-100 dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
        <div class="flex items-center gap-3">
            {# Zoom controls #}
            <div class="flex items-center gap-2">
                <button type="button"
                        onclick="zoomOut()"
                        class="p-2 text-gray-700 dark:text-gray-300 rounded hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
                        title="Zoom arrière">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM13 10H7"></path>
                    </svg>
                </button>
                <span id="zoom-display" class="text-sm text-gray-600 dark:text-gray-400 min-w-[60px] text-center font-medium">100%</span>
                <button type="button"
                        onclick="zoomIn()"
                        class="p-2 text-gray-700 dark:text-gray-300 rounded hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
                        title="Zoom avant">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v6m3-3H7"></path>
                    </svg>
                </button>
            </div>

            {# Divider #}
            <div class="h-6 w-px bg-gray-300 dark:bg-gray-600"></div>

            {# Fit to width button #}
            <button type="button"
                    onclick="fitToWidth()"
                    class="p-2 text-gray-700 dark:text-gray-300 rounded hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
                    title="Ajuster à la largeur">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"></path>
                </svg>
            </button>

            {# Reset zoom button #}
            <button type="button"
                    onclick="resetZoom()"
                    class="hidden sm:inline-flex items-center px-2 py-1 text-xs text-gray-600 dark:text-gray-400 rounded hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
                    title="100%">
                100%
            </button>
        </div>

        {# Action buttons #}
        <div class="flex items-center gap-2">
            <a href="{{ downloadRoute }}"
               class="inline-flex items-center gap-2 px-3 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm rounded-lg transition-colors"
               title="Télécharger">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                </svg>
                <span class="hidden sm:inline">Télécharger</span>
            </a>
        </div>
    </div>

    {# Image container #}
    <div class="relative bg-gray-100 dark:bg-gray-900 flex items-center justify-center overflow-auto p-4"
         style="min-height: calc({{ height }} - 60px);"
         id="image-container">

        {# Loading spinner #}
        <div id="image-loading" class="absolute inset-0 flex items-center justify-center bg-gray-50 dark:bg-gray-900">
            <div class="text-center">
                <div class="animate-spin w-12 h-12 border-4 border-blue-600 border-t-transparent rounded-full mx-auto mb-4"></div>
                <p class="text-gray-600 dark:text-gray-400">Chargement de l'image...</p>
            </div>
        </div>

        {# Image #}
        <img id="document-image"
             src="{{ imageUrl }}"
             alt="{{ document.originalName }}"
             class="shadow-lg bg-white max-w-full h-auto"
             style="display: none; transform-origin: center; transition: transform 0.2s ease;"
             onload="hideLoading()"
             onerror="showError()">

        {# Error message #}
        <div id="image-error" class="hidden text-center max-w-md">
            <svg class="w-24 h-24 mx-auto text-gray-400 dark:text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">
                Impossible d'afficher l'image
            </h3>
            <p class="text-gray-600 dark:text-gray-400 mb-6">
                L'image ne peut pas être visualisée dans votre navigateur.<br>
                Veuillez la télécharger pour la consulter.
            </p>
            <a href="{{ downloadRoute }}"
               class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors shadow-sm">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                </svg>
                Télécharger le fichier
            </a>
        </div>
    </div>
</div>

<script>
    let currentZoom = 1;
    const zoomStep = 0.25;
    const minZoom = 0.25;
    const maxZoom = 4;

    function updateZoom(newZoom) {
        currentZoom = Math.max(minZoom, Math.min(maxZoom, newZoom));
        const img = document.getElementById('document-image');
        img.style.transform = `scale(${currentZoom})`;
        document.getElementById('zoom-display').textContent = Math.round(currentZoom * 100) + '%';
    }

    function zoomIn() {
        updateZoom(currentZoom + zoomStep);
    }

    function zoomOut() {
        updateZoom(currentZoom - zoomStep);
    }

    function resetZoom() {
        updateZoom(1);
    }

    function fitToWidth() {
        const img = document.getElementById('document-image');
        const container = document.getElementById('image-container');
        const containerWidth = container.clientWidth - 32; // Padding
        const imgWidth = img.naturalWidth;
        const newZoom = containerWidth / imgWidth;
        updateZoom(newZoom);
    }

    function hideLoading() {
        document.getElementById('image-loading').style.display = 'none';
        document.getElementById('document-image').style.display = 'block';
    }

    function showError() {
        document.getElementById('image-loading').style.display = 'none';
        document.getElementById('document-image').style.display = 'none';
        document.getElementById('image-error').classList.remove('hidden');
    }
</script>
