{% extends 'layout/dashboard_base.html.twig' %}

{% block title %}{{ message.sujet }} - Messagerie - RH NewLife{% endblock %}

{% block breadcrumb_items %}
    <li>
        <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <a href="{{ path('admin_message_interne_index') }}" class="ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2 dark:text-gray-400 dark:hover:text-white">
                Messagerie
            </a>
        </div>
    </li>
    <li>
        <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 dark:text-gray-400">Message</span>
        </div>
    </li>
{% endblock %}

{% block page_header %}
    <div class="px-4 py-6 lg:px-6">
        <div class="flex items-center gap-4">
            <a href="{{ path('admin_message_interne_index') }}"
               class="p-2 rounded-lg bg-white/20 hover:bg-white/30 transition-colors">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
            </a>
            <div class="flex-1 min-w-0">
                <h1 class="text-2xl md:text-3xl font-bold text-white truncate">
                    {{ message.sujet }}
                </h1>
                <p class="text-blue-100 text-sm md:text-base mt-1">
                    De {{ message.expediteur.fullName }} - {{ message.dateEnvoi|date('d/m/Y H:i') }}
                </p>
            </div>
        </div>
    </div>
{% endblock %}

{% block dashboard_content %}
<div class="max-w-4xl mx-auto space-y-6">
    {# Message header #}
    <div class="glass-card p-6">
        <div class="flex items-start justify-between gap-4">
            <div class="flex items-start gap-4">
                {# Avatar expéditeur #}
                <div class="flex-shrink-0 w-12 h-12 rounded-full bg-gradient-to-br from-emerald-400 to-blue-500 flex items-center justify-center text-white font-bold text-lg">
                    {{ message.expediteur.prenom|first|upper }}{{ message.expediteur.nom|first|upper }}
                </div>
                <div>
                    <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
                        {{ message.expediteur.fullName }}
                    </h2>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        {{ message.expediteur.email }}
                    </p>
                    <p class="text-xs text-gray-400 dark:text-gray-500 mt-1">
                        {{ message.dateEnvoi|date('d F Y à H:i') }}
                    </p>
                </div>
            </div>

            {# Actions #}
            <div class="flex items-center gap-2">
                {% if message.expediteur != app.user %}
                    <a href="{{ path('admin_message_interne_reply', {id: message.id}) }}"
                       class="glass-btn glass-btn-primary inline-flex items-center gap-2 px-4 py-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/>
                        </svg>
                        Répondre
                    </a>
                {% endif %}
            </div>
        </div>

        {# Destinataires #}
        <div class="mt-4 pt-4 border-t border-white/10">
            <div class="flex flex-wrap items-center gap-2 text-sm">
                <span class="text-gray-500 dark:text-gray-400">À :</span>
                {% for destinataire in message.destinataires %}
                    <span class="glass-badge glass-badge-primary">
                        {{ destinataire.fullName }}
                    </span>
                {% endfor %}
                {% if message.rolesCible %}
                    {% for role in message.rolesCible %}
                        <span class="glass-badge glass-badge-info">
                            {% if role == 'ROLE_ADMIN' %}Administrateurs
                            {% elseif role == 'ROLE_DIRECTOR' %}Direction
                            {% elseif role == 'ROLE_EDUCATOR' %}Éducateurs
                            {% else %}{{ role }}
                            {% endif %}
                        </span>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>

    {# Message content #}
    <div class="glass-card p-6">
        <div class="prose prose-emerald dark:prose-invert max-w-none">
            {{ message.contenu|nl2br }}
        </div>
    </div>

    {# Pièces jointes #}
    {% if message.piecesJointes|length > 0 %}
        <div class="glass-card p-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"/>
                </svg>
                Pièces jointes ({{ message.piecesJointes|length }})
            </h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                {% for pieceJointe in message.piecesJointes %}
                    <a href="#" class="flex items-center gap-3 p-3 rounded-lg bg-white/5 hover:bg-white/10 transition-colors group">
                        <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-emerald-500/20 flex items-center justify-center">
                            <svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                            </svg>
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-sm font-medium text-gray-900 dark:text-white truncate group-hover:text-emerald-500 transition-colors">
                                Document #{{ pieceJointe }}
                            </p>
                        </div>
                        <svg class="w-4 h-4 text-gray-400 group-hover:text-emerald-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                        </svg>
                    </a>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    {# Actions footer #}
    <div class="flex items-center justify-between">
        <a href="{{ path('admin_message_interne_index') }}" class="glass-btn px-4 py-2 inline-flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            Retour à la boîte de réception
        </a>

        {% if message.expediteur != app.user %}
            <a href="{{ path('admin_message_interne_reply', {id: message.id}) }}"
               class="glass-btn glass-btn-primary inline-flex items-center gap-2 px-4 py-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/>
                </svg>
                Répondre
            </a>
        {% endif %}
    </div>
</div>
{% endblock %}
