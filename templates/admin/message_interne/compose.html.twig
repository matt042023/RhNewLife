{% extends 'layout/dashboard_base.html.twig' %}

{% block title %}Nouveau message - RH NewLife{% endblock %}

{% block breadcrumb_items %}
    <li>
        <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <a href="{{ path('admin_message_interne_index') }}" class="ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2 dark:text-gray-400 dark:hover:text-white">
                Messagerie
            </a>
        </div>
    </li>
    <li>
        <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 dark:text-gray-400">Nouveau message</span>
        </div>
    </li>
{% endblock %}

{% block page_header %}
    <div class="px-4 py-6 lg:px-6">
        <div class="flex items-center gap-4">
            <a href="{{ path('admin_message_interne_index') }}"
               class="p-2 rounded-lg bg-white/20 hover:bg-white/30 transition-colors">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
            </a>
            <div>
                <h1 class="text-2xl md:text-3xl font-bold text-white">
                    Nouveau message
                </h1>
                <p class="text-blue-100 text-sm md:text-base mt-1">
                    Envoyer un message interne
                </p>
            </div>
        </div>
    </div>
{% endblock %}

{% block dashboard_content %}
<div class="max-w-3xl mx-auto">
    <div class="glass-card p-6">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            {# Destinataires #}
            <div>
                {{ form_label(form.destinataires, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2'}}) }}
                {{ form_widget(form.destinataires, {'attr': {'class': 'glass-input w-full', 'multiple': 'multiple'}}) }}
                {{ form_help(form.destinataires, {'help_attr': {'class': 'mt-1 text-xs text-gray-500 dark:text-gray-400'}}) }}
                {{ form_errors(form.destinataires) }}
            </div>

            {# Broadcast par roles #}
            <div class="glass-card glass-card-primary p-4">
                <h4 class="font-medium text-gray-900 dark:text-white mb-3">{{ form_label(form.rolesCible) }}</h4>
                <div class="flex flex-wrap gap-4">
                    {% for child in form.rolesCible %}
                        <label class="inline-flex items-center gap-2 cursor-pointer">
                            {{ form_widget(child, {'attr': {'class': 'rounded border-gray-300 text-emerald-600 shadow-sm focus:border-emerald-300 focus:ring focus:ring-emerald-200 focus:ring-opacity-50'}}) }}
                            <span class="text-sm text-gray-700 dark:text-gray-300">{{ child.vars.label }}</span>
                        </label>
                    {% endfor %}
                </div>
                {{ form_help(form.rolesCible, {'help_attr': {'class': 'mt-2 text-xs text-gray-500 dark:text-gray-400'}}) }}
            </div>

            {# Sujet #}
            <div>
                {{ form_label(form.sujet, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2'}}) }}
                {{ form_widget(form.sujet) }}
                {{ form_errors(form.sujet) }}
            </div>

            {# Contenu #}
            <div>
                {{ form_label(form.contenu, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2'}}) }}
                {{ form_widget(form.contenu) }}
                {{ form_errors(form.contenu) }}
            </div>

            {# Actions #}
            <div class="flex items-center justify-end gap-3 pt-4 border-t border-white/10">
                <a href="{{ path('admin_message_interne_index') }}" class="glass-btn px-4 py-2">
                    Annuler
                </a>
                <button type="submit" class="glass-btn glass-btn-primary inline-flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                    </svg>
                    Envoyer
                </button>
            </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
