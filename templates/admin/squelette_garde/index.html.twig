{% extends 'admin.html.twig' %}

{% block title %}Templates de Garde{% endblock %}

{% block admin_title %}Templates de Garde{% endblock %}
{% block admin_subtitle %}Gestion des modèles de planning{% endblock %}

{% block admin_actions %}
    <a href="{{ path('admin_squelette_garde_builder_new') }}"
       class="inline-flex items-center px-4 py-2 bg-white/20 hover:bg-white/30 backdrop-blur-md text-white font-medium rounded-lg transition duration-150 border border-white/30">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        Nouveau template
    </a>
{% endblock %}

{% block admin_stats %}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-6">
        <div class="bg-white/10 backdrop-blur-md rounded-lg p-4 border border-white/20">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-blue-100 text-sm font-medium">Total templates</p>
                    <p class="text-3xl font-bold text-white mt-1">{{ stats.total }}</p>
                </div>
                <div class="p-3 bg-blue-500/30 rounded-lg">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white/10 backdrop-blur-md rounded-lg p-4 border border-white/20">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-blue-100 text-sm font-medium">Utilisations totales</p>
                    <p class="text-3xl font-bold text-white mt-1">{{ stats.totalUsage }}</p>
                </div>
                <div class="p-3 bg-purple-500/30 rounded-lg">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block admin_content %}
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        {% if templates is empty %}
            <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">Aucun template</h3>
                <p class="mt-1 text-sm text-gray-500">Créez votre premier template de garde ci-dessus</p>
            </div>
        {% else %}
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Utilisations</th>
                        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for template in templates %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">{{ template.nom }}</div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm text-gray-500">{{ template.description|default('-') }}</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {{ template.nombreUtilisations }} fois
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex items-center justify-end gap-2">
                                    <a href="{{ path('admin_squelette_garde_builder', {id: template.id}) }}"
                                       class="text-blue-600 hover:text-blue-900">
                                        Modifier
                                    </a>

                                    <form method="post" action="{{ path('admin_squelette_garde_duplicate', {id: template.id}) }}" class="inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('duplicate' ~ template.id) }}">
                                        <button type="submit" class="text-gray-600 hover:text-gray-900">
                                            Dupliquer
                                        </button>
                                    </form>

                                    <form method="post" action="{{ path('admin_squelette_garde_delete', {id: template.id}) }}"
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce template ?')" class="inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ template.id) }}">
                                        <button type="submit" class="text-red-600 hover:text-red-900">
                                            Supprimer
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}
