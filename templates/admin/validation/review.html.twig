                                    <span class="font-semibold text-gray-900">{{ completionStatus.uploaded }} / {{ completionStatus.required }}</span>
                                </div>
                                <div class="w-full bg-gray-200 rounded-full h-2">
                                    <div class="bg-gradient-to-r from-blue-500 to-blue-600 h-2 rounded-full" style="width: {{ completionStatus.percentage }}%"></div>
                                </div>
                            </div>

                            <div class="pt-3 border-t border-gray-200 space-y-2 text-sm">
                                <div class="flex items-center gap-2">
                                    <span class="{{ completionStatus.hasPhone ? 'text-green-600' : 'text-gray-400' }}">
                                        {{ completionStatus.hasPhone ? '‚úì' : '‚óã' }}
                                    </span>
                                    <span class="{{ completionStatus.hasPhone ? 'text-gray-900' : 'text-gray-500' }}">T√©l√©phone</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <span class="{{ completionStatus.hasAddress ? 'text-green-600' : 'text-gray-400' }}">
                                        {{ completionStatus.hasAddress ? '‚úì' : '‚óã' }}
                                    </span>
                                    <span class="{{ completionStatus.hasAddress ? 'text-gray-900' : 'text-gray-500' }}">Adresse</span>
