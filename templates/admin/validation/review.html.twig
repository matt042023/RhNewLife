                                    <span class="{{ completionStatus.hasIban ? 'text-gray-900' : 'text-gray-500' }}">IBAN</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <span class="{{ completionStatus.hasBic ? 'text-green-600' : 'text-gray-400' }}">
                                        {{ completionStatus.hasBic ? '‚úì' : '‚óã' }}
                                    </span>
                                    <span class="{{ completionStatus.hasBic ? 'text-gray-900' : 'text-gray-500' }}">BIC</span>
                                </div>
                            </div>
