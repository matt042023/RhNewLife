                    <div class="card-header">
                        <h2 class="card-title">‚ö° Actions</h2>
                    </div>
                    <div class="card-body">
                        <div class="space-y-3">
                            <form method="post" action="{{ path('app_admin_validation_validate', {id: user.id}) }}">
                                <button type="submit" class="btn btn-success w-full" {% if completionStatus.percentage < 100 %}disabled{% endif %}>
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                    Valider l'onboarding
                                </button>
                            </form>

