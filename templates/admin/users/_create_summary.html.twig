                <p class="text-gray-500 dark:text-gray-400 text-sm">-</p>
            </div>
        </div>
    </div>

    {# Final confirmation #}
    <div class="glass-card glass-card-success p-4">
        <div class="flex gap-3">
            <svg class="w-6 h-6 text-green-600 dark:text-green-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div class="text-sm text-green-800 dark:text-green-200">
