{% extends 'base.html.twig' %}

{% block title %}Modifier {{ user.fullName }} - RH NewLife{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 p-8">
    <div class="max-w-4xl mx-auto">

        {# Header #}
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Modifier le profil</h1>
            <p class="text-gray-600 mt-1">{{ user.fullName }} - {{ user.matricule }}</p>
        </div>

        {# Errors #}
        {% if errors is not empty %}
            <div class="alert alert-error mb-6">
                <ul class="list-disc list-inside">
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}

        {# Form #}
        <form method="post" class="bg-white rounded-2xl shadow-lg p-8">

            <div class="grid grid-cols-2 gap-6">
                <div>
                    <label class="form-label">Prénom</label>
                    <input type="text" name="first_name" value="{{ user.firstName }}" class="form-input" required>
                </div>

                <div>
                    <label class="form-label">Nom</label>
                    <input type="text" name="last_name" value="{{ user.lastName }}" class="form-input" required>
                </div>

                <div>
                    <label class="form-label">Poste</label>
                    <input type="text" name="position" value="{{ user.position }}" class="form-input">
                </div>

                <div>
                    <label class="form-label">Villa</label>
                    <select name="villa_id" class="form-select">
                        <option value="">Aucune villa</option>
                        {% for villa in villas %}
                            <option value="{{ villa.id }}" {{ user.villa and user.villa.id == villa.id ? 'selected' : '' }}>
                                {{ villa.nom }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div>
                    <label class="form-label">Téléphone</label>
                    <input type="tel" name="phone" value="{{ user.phone }}" class="form-input">
                </div>

                <div>
                    <label class="form-label">Date d'embauche</label>
                    <input type="date" name="hiring_date" value="{{ user.hiringDate ? user.hiringDate|date('Y-m-d') : '' }}" class="form-input">
                </div>

                <div class="col-span-2">
                    <label class="form-label">Adresse</label>
                    <textarea name="address" class="form-input" rows="2">{{ user.address }}</textarea>
                </div>

                <div>
                    <label class="form-label">Situation familiale</label>
                    <select name="family_status" class="form-select">
                        <option value="">Non renseigné</option>
                        <option value="single" {{ user.familyStatus == 'single' ? 'selected' : '' }}>Célibataire</option>
                        <option value="married" {{ user.familyStatus == 'married' ? 'selected' : '' }}>Marié(e)</option>
                        <option value="divorced" {{ user.familyStatus == 'divorced' ? 'selected' : '' }}>Divorcé(e)</option>
                        <option value="widowed" {{ user.familyStatus == 'widowed' ? 'selected' : '' }}>Veuf(ve)</option>
                    </select>
                </div>

                <div>
                    <label class="form-label">Nombre d'enfants</label>
                    <input type="number" name="children" value="{{ user.children ?? 0 }}" min="0" class="form-input">
                </div>

                <div>
                    <label class="form-label">IBAN</label>
                    <input type="text" name="iban" value="{{ user.iban }}" class="form-input">
                </div>

                <div>
                    <label class="form-label">BIC</label>
                    <input type="text" name="bic" value="{{ user.bic }}" class="form-input">
                </div>
            </div>

            {# Actions #}
            <div class="flex items-center justify-between pt-6 mt-6 border-t">
                <a href="{{ path('app_admin_users_view', {id: user.id}) }}" class="text-gray-600 hover:text-gray-800 font-semibold">
                    Annuler
                </a>
                <button type="submit" class="btn btn-primary">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Enregistrer les modifications
                </button>
            </div>
        </form>

    </div>
</div>
{% endblock %}
