{% extends 'layout/dashboard_base.html.twig' %}

{% block title %}Gestion des Rendez-vous{% endblock %}

{% block page_header %}
<div class="px-4 py-6 lg:px-6">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between">
        <div class="flex-1 min-w-0">
            <h1 class="text-2xl md:text-3xl font-bold text-white mb-1">Gestion des Rendez-vous</h1>
            <p class="text-blue-100 text-sm md:text-base">G√©rez toutes les convocations et demandes</p>
        </div>
        <div class="mt-4 md:mt-0 md:ml-4 flex-shrink-0 flex gap-3">
            <a href="{{ path('admin_appointment_pending') }}"
               class="inline-flex items-center px-4 py-2 bg-yellow-500 hover:bg-yellow-600 text-white font-medium rounded-lg transition shadow-sm">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Demandes en attente
            </a>
            <a href="{{ path('admin_appointment_create') }}"
               class="inline-flex items-center px-4 py-2 bg-white text-blue-600 hover:bg-blue-50 font-medium rounded-lg transition shadow-sm">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                Cr√©er une convocation
            </a>
        </div>
    </div>
</div>
{% endblock %}

{% block dashboard_content %}

    {# Filtres #}
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Filtres</h2>

        {{ form_start(filterForm, {'attr': {'class': 'grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4'}}) }}

            <div>
                {{ form_label(filterForm.status, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                {{ form_widget(filterForm.status) }}
            </div>

            <div>
                {{ form_label(filterForm.type, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                {{ form_widget(filterForm.type) }}
            </div>

            <div>
                {{ form_label(filterForm.dateFrom, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                {{ form_widget(filterForm.dateFrom) }}
            </div>

            <div>
                {{ form_label(filterForm.dateTo, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                {{ form_widget(filterForm.dateTo) }}
            </div>

            <div>
                {{ form_label(filterForm.participant, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1'}}) }}
                {{ form_widget(filterForm.participant) }}
            </div>

            <div class="lg:col-span-5 flex gap-2">
                <button type="submit" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition">
                    Filtrer
                </button>
                <a href="{{ path('admin_appointment_index') }}" class="px-4 py-2 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 font-medium rounded-lg transition">
                    R√©initialiser
                </a>
                <a href="{{ path('admin_appointment_export') }}" class="ml-auto px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition">
                    <svg class="inline w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    Exporter CSV
                </a>
            </div>

        {{ form_end(filterForm) }}
    </div>

    {# Liste des rendez-vous #}
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
        {% if appointments|length > 0 %}
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                    <thead class="bg-gray-50 dark:bg-gray-700">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                                Date
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                                Sujet
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                                Organisateur
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                                Type
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                                Statut
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                                Participants
                            </th>
                            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                        {% for appointment in appointments %}
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                                    {{ appointment.startAt|date('d/m/Y H:i') }}
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-900 dark:text-white">
                                    <div class="font-medium">{{ appointment.subject }}</div>
                                    {% if appointment.location %}
                                        <div class="text-gray-500 dark:text-gray-400 text-xs">üìç {{ appointment.location }}</div>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                                    {{ appointment.organizer.fullName }}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {% set typeColors = {
                                        'CONVOCATION': 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200',
                                        'DEMANDE': 'bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-200',
                                        'VISITE_MEDICALE': 'bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-200'
                                    } %}
                                    <span class="px-2 py-1 text-xs font-semibold rounded {{ typeColors[appointment.type] ?? 'bg-gray-100 text-gray-800' }}">
                                        {{ appointment.typeLabel }}
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {% set displayStatus = appointment.displayStatus %}
                                    {% set statusColors = {
                                        'EN_ATTENTE': 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200',
                                        'CONFIRME': 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200',
                                        'PRET': 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200',
                                        'REFUSE': 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200',
                                        'ANNULE': 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200',
                                        'TERMINE': 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200'
                                    } %}
                                    <span class="px-2 py-1 text-xs font-semibold rounded {{ statusColors[displayStatus] ?? 'bg-gray-100 text-gray-800' }}">
                                        {{ appointment.displayStatusLabel }}
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-sm">
                                    <div class="flex flex-col gap-1">
                                        {% for participant in appointment.appointmentParticipants %}
                                            <div class="flex items-center gap-1">
                                                <span class="text-gray-900 dark:text-white truncate max-w-[120px]" title="{{ participant.user.fullName }}">
                                                    {{ participant.user.fullName }}
                                                </span>
                                                {% if participant.presenceStatus == 'CONFIRMED' %}
                                                    <span class="text-green-600 dark:text-green-400" title="Pr√©sence confirm√©e">‚úÖ</span>
                                                {% elseif participant.presenceStatus == 'ABSENT' %}
                                                    <span class="text-red-600 dark:text-red-400" title="Absent">‚ùå</span>
                                                {% else %}
                                                    <span class="text-yellow-600 dark:text-yellow-400" title="√Ä confirmer">‚è≥</span>
                                                {% endif %}
                                            </div>
                                        {% endfor %}
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <a href="{{ path('admin_appointment_show', {id: appointment.id}) }}"
                                       class="text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300 mr-3">
                                        Voir
                                    </a>
                                    {% if is_granted('APPOINTMENT_EDIT', appointment) %}
                                        <a href="{{ path('admin_appointment_edit', {id: appointment.id}) }}"
                                           class="text-green-600 hover:text-green-900 dark:text-green-400 dark:hover:text-green-300">
                                            Modifier
                                        </a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">Aucun rendez-vous</h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Aucun rendez-vous ne correspond aux crit√®res.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
