{% extends 'admin.html.twig' %}

{% block title %}Rapport Paie - {{ consolidation.user.fullName }} - {{ consolidation.periodLabel }}{% endblock %}

{% block admin_title %}Rapport de Paie{% endblock %}
{% block admin_subtitle %}{{ consolidation.user.fullName }} - {{ consolidation.periodLabel }}{% endblock %}

{% block admin_content %}
<div class="space-y-6">
    {# En-tête avec actions #}
    <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex justify-between items-center">
            <div>
                <a href="{{ path('admin_payroll_month', {period: consolidation.period}) }}" class="text-blue-600 hover:text-blue-800 text-sm">
                    &larr; Retour à {{ consolidation.periodLabel }}
                </a>
            </div>
            <div class="flex items-center space-x-4">
                {% set statusClass = {
                    'draft': 'bg-gray-100 text-gray-800',
                    'validated': 'bg-green-100 text-green-800',
                    'exported': 'bg-blue-100 text-blue-800',
                    'archived': 'bg-gray-200 text-gray-600'
                } %}
                <span class="px-3 py-1 text-sm rounded-full {{ statusClass[consolidation.status] ?? 'bg-gray-100' }}">
                    {{ consolidation.statusLabel }}
                </span>

                <div class="flex space-x-2">
                    <form method="POST" action="{{ path('admin_payroll_refresh', {id: consolidation.id}) }}" class="inline">
                        <button type="submit" class="inline-flex items-center px-3 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium rounded-lg transition text-sm">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                            </svg>
                            Rafraîchir
                        </button>
                    </form>

                    {% if consolidation.isDraft %}
                        <form method="POST" action="{{ path('admin_payroll_validate', {id: consolidation.id}) }}" class="inline">
                            <button type="submit" class="inline-flex items-center px-3 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition text-sm">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Valider
                            </button>
                        </form>
                    {% else %}
                        <button type="button" onclick="openReopenModal()" class="inline-flex items-center px-3 py-2 bg-yellow-500 hover:bg-yellow-600 text-white font-medium rounded-lg transition text-sm">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                            Réouvrir
                        </button>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# Grille de données #}
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        {# Jours travaillés #}
        <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Jours Travaillés</h3>
            <div class="space-y-3">
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                    <span class="text-gray-600">Gardes</span>
                    <span class="font-medium">{{ consolidation.joursTravailes|number_format(2, ',', ' ') }} jours</span>
                </div>
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                    <span class="text-gray-600">Événements (hors garde)</span>
                    <span class="font-medium">{{ consolidation.joursEvenements|number_format(2, ',', ' ') }} jours</span>
                </div>
                <div class="flex justify-between items-center py-2 bg-blue-50 -mx-6 px-6">
                    <span class="font-semibold text-blue-900">Total jours travaillés</span>
                    <span class="font-bold text-blue-900">{{ consolidation.totalJoursTravailes|number_format(2, ',', ' ') }} jours</span>
                </div>
            </div>
        </div>

        {# Congés Payés #}
        <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Congés Payés</h3>
            <div class="space-y-3">
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                    <span class="text-gray-600">Solde début de mois</span>
                    <span class="font-medium">{{ consolidation.cpSoldeDebut|number_format(2, ',', ' ') }} jours</span>
                </div>
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                    <span class="text-gray-600">Acquis ce mois</span>
                    <span class="font-medium text-green-600">+ {{ consolidation.cpAcquis|number_format(2, ',', ' ') }} jours</span>
                </div>
                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                    <span class="text-gray-600">Pris ce mois</span>
                    <span class="font-medium text-red-600">- {{ consolidation.cpPris|number_format(2, ',', ' ') }} jours</span>
                </div>
                <div class="flex justify-between items-center py-2 bg-green-50 -mx-6 px-6">
                    <span class="font-semibold text-green-900">Solde fin de mois</span>
                    <span class="font-bold text-green-900">{{ consolidation.cpSoldeFin|number_format(2, ',', ' ') }} jours</span>
                </div>
            </div>
        </div>

        {# Détail des Absences #}
        {% if details.absences|length > 0 %}
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">Détail des Absences</h3>
            </div>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date début</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date fin</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Jours ouvrés</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for absence in details.absences %}
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                {{ absence.start }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                {{ absence.end }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 py-1 text-xs rounded-full
                                    {% if absence.type_code == 'CP' %}bg-blue-100 text-blue-800
                                    {% elseif absence.type_code == 'MAL' or absence.type_code == 'MALADIE' %}bg-orange-100 text-orange-800
                                    {% elseif absence.type_code == 'RTT' %}bg-purple-100 text-purple-800
                                    {% else %}bg-gray-100 text-gray-800{% endif %}">
                                    {{ absence.type }}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                                {{ absence.days|number_format(2, ',', ' ') }} j
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot class="bg-gray-50">
                        <tr>
                            <td colspan="3" class="px-6 py-3 text-right text-sm font-semibold text-gray-700">
                                Total Absences:
                            </td>
                            <td class="px-6 py-3 text-center text-sm font-bold text-gray-900">
                                {{ consolidation.totalJoursAbsence|number_format(2, ',', ' ') }} j
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        {% else %}
        <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Absences</h3>
            <p class="text-gray-500 italic">Aucune absence ce mois</p>
        </div>
        {% endif %}

        {# Éléments Variables #}
        <div class="bg-white rounded-lg shadow-sm p-6">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-semibold text-gray-900">Éléments Variables</h3>
                <a href="{{ path('admin_element_variable_new', {period: consolidation.period, user: consolidation.user.id, consolidation: consolidation.id}) }}"
                   class="text-sm text-purple-600 hover:text-purple-800">
                    + Ajouter
                </a>
            </div>
            {% if details.variables is not empty %}
                <div class="space-y-2">
                    {% for variable in details.variables %}
                        <div class="flex justify-between items-center py-2 border-b border-gray-100">
                            <div>
                                <span class="text-gray-900">{{ variable.label }}</span>
                                <span class="text-xs text-gray-500 ml-2">({{ variable.category_label }})</span>
                            </div>
                            <span class="font-medium {% if variable.amount < 0 %}text-red-600{% else %}text-green-600{% endif %}">
                                {{ variable.amount|number_format(2, ',', ' ') }} €
                            </span>
                        </div>
                    {% endfor %}
                    <div class="flex justify-between items-center py-2 bg-purple-50 -mx-6 px-6 mt-2">
                        <span class="font-semibold text-purple-900">Total variables</span>
                        <span class="font-bold text-purple-900">{{ consolidation.totalVariables|number_format(2, ',', ' ') }} €</span>
                    </div>
                </div>
            {% else %}
                <p class="text-gray-500 italic">Aucun élément variable</p>
            {% endif %}
        </div>
    </div>

    {# Détail des Gardes #}
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Détail des Gardes</h3>
        </div>

        {% if details.affectations|length > 0 %}
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Horaires</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Villa</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Jours comptabilisés</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for affectation in details.affectations %}
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                {{ affectation.start_date }}
                                {% if affectation.start_date != affectation.end_date %}
                                    → {{ affectation.end_date }}
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {{ affectation.start_time }} - {{ affectation.end_time }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 py-1 text-xs rounded-full
                                    {% if affectation.type == 'renfort' %}bg-blue-100 text-blue-800
                                    {% else %}bg-purple-100 text-purple-800{% endif %}">
                                    {{ affectation.type_label }}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                {{ affectation.villa ?? '-' }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                                {{ affectation.jours }} jour{{ affectation.jours > 1 ? 's' : '' }}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot class="bg-gray-50">
                        <tr>
                            <td colspan="4" class="px-6 py-3 text-right text-sm font-semibold text-gray-700">
                                Total Gardes:
                            </td>
                            <td class="px-6 py-3 text-center text-sm font-bold text-gray-900">
                                {{ consolidation.joursTravailes|number_format(2, ',', ' ') }} jours
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        {% else %}
            <div class="px-6 py-8 text-center text-gray-500">
                Aucune garde ce mois-ci
            </div>
        {% endif %}
    </div>

    {# Détail des Événements (hors garde) #}
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Détail des Événements (hors garde)</h3>
        </div>

        {% if details.events|length > 0 %}
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Heure</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Motif</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Durée</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for event in details.events %}
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                {{ event.date }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {{ event.time }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">
                                    {{ event.type }}
                                </span>
                            </td>
                            <td class="px-6 py-4 text-sm font-medium">
                                {{ event.title }}
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-500">
                                {{ event.description|default('-') }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center text-sm">
                                {{ event.duration }} min
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot class="bg-gray-50">
                        <tr>
                            <td colspan="5" class="px-6 py-3 text-right text-sm font-semibold text-gray-700">
                                Total jours événements:
                            </td>
                            <td class="px-6 py-3 text-center text-sm font-bold text-gray-900">
                                {{ consolidation.joursEvenements|number_format(2, ',', ' ') }} jours
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        {% else %}
            <div class="px-6 py-8 text-center text-gray-500">
                Aucun événement hors garde ce mois-ci
            </div>
        {% endif %}
    </div>

    {# Historique #}
    <div class="bg-white rounded-lg shadow-sm p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Historique des modifications</h3>
        {% if history is not empty %}
            <div class="space-y-3">
                {% for entry in history %}
                    <div class="flex items-start space-x-3 py-2 border-b border-gray-100 last:border-b-0">
                        <div class="flex-shrink-0">
                            {% set actionIcon = {
                                'created': 'bg-blue-100 text-blue-600',
                                'updated': 'bg-yellow-100 text-yellow-600',
                                'validated': 'bg-green-100 text-green-600',
                                'exported': 'bg-purple-100 text-purple-600',
                                'correction': 'bg-orange-100 text-orange-600',
                                'reopened': 'bg-red-100 text-red-600'
                            } %}
                            <span class="w-8 h-8 rounded-full flex items-center justify-center {{ actionIcon[entry.action] ?? 'bg-gray-100 text-gray-600' }}">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </span>
                        </div>
                        <div class="flex-1">
                            <div class="text-sm text-gray-900">{{ entry.description }}</div>
                            {% if entry.comment %}
                                <div class="text-xs text-gray-500 italic mt-1">{{ entry.comment }}</div>
                            {% endif %}
                            <div class="text-xs text-gray-400 mt-1">
                                {{ entry.modified_by }} - {{ entry.modified_at }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-gray-500 italic">Aucun historique disponible</p>
        {% endif %}
    </div>
</div>

{# Modal réouverture #}
<div id="reopenModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-xl p-6 w-full max-w-md">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Réouvrir le rapport</h3>
        <form method="POST" action="{{ path('admin_payroll_reopen', {id: consolidation.id}) }}">
            <div class="mb-4">
                <label for="reason" class="block text-sm font-medium text-gray-700 mb-1">Motif de la réouverture</label>
                <textarea name="reason" id="reason" rows="3" required
                          class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                          placeholder="Indiquez la raison de la réouverture..."></textarea>
            </div>
            <div class="flex justify-end space-x-2">
                <button type="button" onclick="closeReopenModal()"
                        class="px-4 py-2 text-gray-700 bg-gray-200 hover:bg-gray-300 rounded-lg transition">
                    Annuler
                </button>
                <button type="submit"
                        class="px-4 py-2 text-white bg-yellow-500 hover:bg-yellow-600 rounded-lg transition">
                    Réouvrir
                </button>
            </div>
        </form>
    </div>
</div>

<script>
function openReopenModal() {
    document.getElementById('reopenModal').classList.remove('hidden');
}
function closeReopenModal() {
    document.getElementById('reopenModal').classList.add('hidden');
}
</script>
{% endblock %}
