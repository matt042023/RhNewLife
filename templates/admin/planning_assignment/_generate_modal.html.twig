<div data-planning-assignment-target="generateModal"
     class="hidden fixed inset-0 z-50 overflow-y-auto"
     aria-labelledby="modal-title"
     role="dialog"
     aria-modal="true">

    {# Backdrop #}
    <div class="fixed inset-0 bg-gray-900 bg-opacity-75 transition-opacity"></div>

    {# Modal content #}
    <div class="flex min-h-screen items-center justify-center p-4">
        <div class="relative bg-white rounded-lg shadow-xl w-full p-6">

            {# Header #}
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-gray-900" id="modal-title">
                    Générer un squelette de garde
                </h2>
                <button type="button"
                        data-action="planning-assignment#closeModal"
                        class="text-gray-400 hover:text-gray-500">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            {# Form #}
            <form data-action="submit->planning-assignment#submitGenerate" class="space-y-6">

                {# Template selection #}
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Template de garde
                    </label>
                    <select name="templateId"
                            required
                            class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                        <option value="">-- Sélectionnez un template --</option>
                        {% for template in templates %}
                        <option value="{{ template.id }}">
                            {{ template.nom }}
                            {% if template.nombreUtilisations > 0 %}
                                ({{ template.nombreUtilisations }} utilisation{{ template.nombreUtilisations > 1 ? 's' : '' }})
                            {% endif %}
                        </option>
                        {% endfor %}
                    </select>
                    <p class="mt-1 text-sm text-gray-500">
                        Choisissez le modèle de planning à appliquer
                    </p>
                </div>

                {# Date range #}
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Date début
                        </label>
                        <input type="date"
                               name="startDate"
                               required
                               class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Date fin
                        </label>
                        <input type="date"
                               name="endDate"
                               required
                               class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    </div>
                </div>
                <p class="text-sm text-gray-500">
                    La génération s'appliquera à tous les mois de cette période
                </p>

                {# Scope selection #}
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Scope d'application
                    </label>
                    <select name="scope"
                            data-planning-assignment-target="scopeSelect"
                            data-action="change->planning-assignment#toggleVillaSelect"
                            class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                        <option value="villa">Villa spécifique</option>
                        <option value="all">Toutes les villas</option>
                        <option value="renfort">Renfort partagé uniquement</option>
                    </select>
                </div>

                {# Villa selection (conditional) #}
                <div data-planning-assignment-target="villaSelect">
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Villa
                    </label>
                    <select name="villaId"
                            class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                        {% for villa in villas %}
                        <option value="{{ villa.id }}">
                            {{ villa.nom }}
                        </option>
                        {% endfor %}
                    </select>
                </div>

                {# Actions #}
                <div class="flex justify-end space-x-3 pt-4 border-t">
                    <button type="button"
                            data-action="planning-assignment#closeModal"
                            class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 bg-white hover:bg-gray-50 font-medium transition">
                        Annuler
                    </button>
                    <button type="submit"
                            class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition">
                        Générer
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>
