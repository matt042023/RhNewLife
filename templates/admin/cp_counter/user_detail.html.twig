{% extends 'admin.html.twig' %}

{% block title %}Compteur CP - {{ user.fullName }}{% endblock %}

{% block admin_title %}Compteur CP{% endblock %}
{% block admin_subtitle %}{{ user.fullName }} - Période {{ counter.periodeReference }}{% endblock %}

{% block admin_content %}
<div class="space-y-6">
    {# Navigation retour #}
    <div>
        <a href="{{ path('admin_cp_counter_index') }}" class="inline-flex items-center text-blue-600 hover:text-blue-800">
            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Retour à la liste
        </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        {# Informations utilisateur #}
        <div class="bg-white rounded-lg shadow-sm p-6">
            <div class="flex items-center mb-4">
                <div class="w-16 h-16 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 font-bold text-xl mr-4">
                    {{ user.firstName|first }}{{ user.lastName|first }}
                </div>
                <div>
                    <h3 class="text-lg font-medium text-gray-900">{{ user.fullName }}</h3>
                    <p class="text-sm text-gray-500">{{ user.matricule ?? 'Sans matricule' }}</p>
                    <p class="text-sm text-gray-500">{{ user.email }}</p>
                </div>
            </div>
            <div class="border-t pt-4 space-y-2">
                <div class="flex justify-between text-sm">
                    <span class="text-gray-500">Date d'embauche</span>
                    <span class="text-gray-900">{{ user.hiringDate ? user.hiringDate|date('d/m/Y') : 'Non renseignée' }}</span>
                </div>
                <div class="flex justify-between text-sm">
                    <span class="text-gray-500">Période de référence</span>
                    <span class="text-gray-900">{{ counter.periodeReference }}</span>
                </div>
            </div>
        </div>

        {# Solde actuel #}
        <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Solde actuel</h3>
            <div class="text-center py-4">
                <div class="text-5xl font-bold {% if counter.soldeActuel >= 10 %}text-green-600{% elseif counter.soldeActuel >= 5 %}text-yellow-600{% else %}text-red-600{% endif %}">
                    {{ counter.soldeActuel|number_format(2, ',', ' ') }}
                </div>
                <p class="text-gray-500 mt-2">jours disponibles</p>
            </div>
            <div class="mt-4">
                <button type="button" onclick="openAdjustModal()" class="w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition">
                    <svg class="w-5 h-5 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
                    </svg>
                    Ajuster le solde
                </button>
            </div>
        </div>

        {# Détail du calcul #}
        <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Détail du calcul</h3>
            <div class="space-y-3">
                <div class="flex justify-between items-center py-2 border-b">
                    <span class="text-gray-600">Solde initial (report)</span>
                    <span class="font-medium">{{ counter.soldeInitial|number_format(2, ',', ' ') }} j</span>
                </div>
                <div class="flex justify-between items-center py-2 border-b">
                    <span class="text-green-600">+ Jours acquis</span>
                    <span class="font-medium text-green-600">{{ counter.acquis|number_format(2, ',', ' ') }} j</span>
                </div>
                <div class="flex justify-between items-center py-2 border-b">
                    <span class="text-red-600">- Jours pris</span>
                    <span class="font-medium text-red-600">{{ counter.pris|number_format(2, ',', ' ') }} j</span>
                </div>
                {% if counter.ajustementAdmin != 0 %}
                <div class="flex justify-between items-center py-2 border-b">
                    <span class="{% if counter.ajustementAdmin > 0 %}text-blue-600{% else %}text-orange-600{% endif %}">
                        {{ counter.ajustementAdmin > 0 ? '+ Ajustement' : '- Ajustement' }}
                    </span>
                    <span class="font-medium {% if counter.ajustementAdmin > 0 %}text-blue-600{% else %}text-orange-600{% endif %}">
                        {{ counter.ajustementAdmin|abs|number_format(2, ',', ' ') }} j
                    </span>
                </div>
                {% endif %}
                <div class="flex justify-between items-center py-2 bg-gray-50 -mx-6 px-6">
                    <span class="font-medium text-gray-900">= Solde actuel</span>
                    <span class="font-bold text-lg">{{ counter.soldeActuel|number_format(2, ',', ' ') }} j</span>
                </div>
            </div>
        </div>
    </div>

    {# Historique des mouvements #}
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="px-6 py-4 border-b">
            <h3 class="text-lg font-medium text-gray-900">Historique des mouvements</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Description</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Jours</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Solde après</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for movement in movements %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ movement.date|date('d/m/Y') }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {% if movement.type == 'credit' %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    Crédit
                                </span>
                            {% elseif movement.type == 'debit' %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                    Débit
                                </span>
                            {% elseif movement.type == 'adjustment' %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                    Ajustement
                                </span>
                            {% elseif movement.type == 'report' %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                                    Report
                                </span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-900">
                            {{ movement.description }}
                            {% if movement.comment %}
                                <br><span class="text-xs text-gray-500 italic">{{ movement.comment }}</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-medium {% if movement.days > 0 %}text-green-600{% else %}text-red-600{% endif %}">
                            {{ movement.days > 0 ? '+' : '' }}{{ movement.days|number_format(2, ',', ' ') }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-900">
                            {{ movement.balanceAfter|number_format(2, ',', ' ') }} j
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="5" class="px-6 py-12 text-center text-gray-500">
                            Aucun mouvement enregistré pour cette période.
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {# Absences CP en cours ou à venir #}
    {% if pendingAbsences|length > 0 %}
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="px-6 py-4 border-b">
            <h3 class="text-lg font-medium text-gray-900">Congés prévus</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Période</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Jours</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Statut</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for absence in pendingAbsences %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 text-sm text-gray-900">
                            {{ absence.startAt|date('d/m/Y') }} - {{ absence.endAt|date('d/m/Y') }}
                        </td>
                        <td class="px-6 py-4 text-sm text-center text-gray-900">
                            {{ absence.workingDaysCount|number_format(2, ',', ' ') }} j
                        </td>
                        <td class="px-6 py-4 text-center">
                            {% if absence.status == 'pending' %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                    En attente
                                </span>
                            {% elseif absence.status == 'approved' %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    Approuvé
                                </span>
                            {% endif %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% endif %}
</div>

{# Modal d'ajustement #}
<div id="adjust-modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50">
    <div class="relative top-20 mx-auto p-5 w-full">
        <div class="bg-white rounded-lg shadow-xl">
            <div class="flex items-center justify-between p-4 border-b">
                <h3 class="text-lg font-medium text-gray-900">Ajuster le solde CP</h3>
                <button type="button" onclick="closeAdjustModal()" class="text-gray-400 hover:text-gray-500">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <form method="POST" action="{{ path('admin_cp_counter_adjust', {id: counter.id}) }}" class="p-6 space-y-4">
                <input type="hidden" name="_token" value="{{ csrf_token('adjust_cp' ~ counter.id) }}">

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Type d'ajustement</label>
                    <div class="flex space-x-4">
                        <label class="flex items-center">
                            <input type="radio" name="type" value="add" class="h-4 w-4 text-blue-600 focus:ring-blue-500" checked>
                            <span class="ml-2 text-sm text-gray-700">Ajouter des jours</span>
                        </label>
                        <label class="flex items-center">
                            <input type="radio" name="type" value="remove" class="h-4 w-4 text-blue-600 focus:ring-blue-500">
                            <span class="ml-2 text-sm text-gray-700">Retirer des jours</span>
                        </label>
                    </div>
                </div>

                <div>
                    <label for="days" class="block text-sm font-medium text-gray-700 mb-1">Nombre de jours</label>
                    <input type="number" name="days" id="days" step="0.5" min="0.5" required
                           class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                </div>

                <div>
                    <label for="comment" class="block text-sm font-medium text-gray-700 mb-1">Motif (obligatoire)</label>
                    <textarea name="comment" id="comment" rows="3" required
                              class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                              placeholder="Ex: Régularisation suite à erreur de saisie..."></textarea>
                </div>

                <div class="flex justify-end space-x-3 pt-4">
                    <button type="button" onclick="closeAdjustModal()" class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
                        Annuler
                    </button>
                    <button type="submit" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg">
                        Appliquer l'ajustement
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function openAdjustModal() {
    document.getElementById('adjust-modal').classList.remove('hidden');
}

function closeAdjustModal() {
    document.getElementById('adjust-modal').classList.add('hidden');
}

// Fermer la modal en cliquant à l'extérieur
document.getElementById('adjust-modal').addEventListener('click', function(e) {
    if (e.target === this) {
        closeAdjustModal();
    }
});
</script>
{% endblock %}
