{% extends 'admin.html.twig' %}

{% block title %}Validation absence - {{ absence.user.fullName }}{% endblock %}

{% block admin_title %}Validation d'absence{% endblock %}
{% block admin_subtitle %}{{ absence.user.fullName }} - {{ absence.absenceType.label }}{% endblock %}

{% block admin_actions %}
    <a href="{{ path('admin_absence_index') }}" class="inline-flex items-center px-4 py-2 bg-white/20 text-white rounded-lg hover:bg-white/30 transition-colors font-medium">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Retour au dashboard
    </a>
{% endblock %}

{% block admin_content %}
    <div class="space-y-6">
        {# Flash messages #}
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="p-4 rounded-lg {{ type == 'success' ? 'bg-green-100 text-green-800' : (type == 'error' ? 'bg-red-100 text-red-800' : 'bg-blue-100 text-blue-800') }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            {# Colonne principale - Informations de la demande #}
            <div class="lg:col-span-2 space-y-6">
                {# Informations générales #}
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-lg font-semibold text-gray-900">Informations de la demande</h2>
                        {% include 'absence/_status_badge.html.twig' with {'absence': absence} %}
                    </div>

                    <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Employé</dt>
                            <dd class="mt-1">
                                <div class="text-sm font-medium text-gray-900">{{ absence.user.fullName }}</div>
                                <div class="text-sm text-gray-500">{{ absence.user.email }}</div>
                            </dd>
                        </div>

                        <div>
                            <dt class="text-sm font-medium text-gray-500">Type d'absence</dt>
                            <dd class="mt-1">
                                <div class="text-sm font-medium text-gray-900">{{ absence.absenceType.label }}</div>
                                <div class="text-xs text-gray-500">Code: {{ absence.absenceType.code }}</div>
                            </dd>
                        </div>

                        <div>
                            <dt class="text-sm font-medium text-gray-500">Date de début</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ absence.startAt|date('d/m/Y à H:i') }}</dd>
                        </div>

                        <div>
                            <dt class="text-sm font-medium text-gray-500">Date de fin</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ absence.endAt|date('d/m/Y à H:i') }}</dd>
                        </div>

                        <div>
                            <dt class="text-sm font-medium text-gray-500">Durée</dt>
                            <dd class="mt-1">
                                <span class="text-sm font-bold text-gray-900">{{ absence.workingDaysCount|number_format(1, ',', ' ') }}</span>
                                <span class="text-sm text-gray-500">jour{{ absence.workingDaysCount > 1 ? 's' : '' }} ouvré{{ absence.workingDaysCount > 1 ? 's' : '' }}</span>
                            </dd>
                        </div>

                        <div>
                            <dt class="text-sm font-medium text-gray-500">Demande créée le</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ absence.createdAt|date('d/m/Y à H:i') }}</dd>
                        </div>

                        {% if absence.absenceType.deductFromCounter %}
                            <div class="md:col-span-2">
                                <dt class="text-sm font-medium text-gray-500">Impact sur le compteur</dt>
                                <dd class="mt-1 flex items-center text-sm text-orange-600">
                                    <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                                    </svg>
                                    Cette absence sera déduite du compteur de l'employé
                                </dd>
                            </div>
                        {% endif %}
                    </dl>

                    {% if absence.reason %}
                        <div class="mt-4 pt-4 border-t border-gray-200">
                            <dt class="text-sm font-medium text-gray-500 mb-2">Motif de la demande</dt>
                            <dd class="text-sm text-gray-900 whitespace-pre-line bg-gray-50 p-3 rounded-md">{{ absence.reason }}</dd>
                        </div>
                    {% endif %}
                </div>

                {# Justificatifs #}
                {% if absence.requiresJustification %}
                    <div class="bg-white rounded-lg shadow-sm p-6">
                        <div class="flex items-center justify-between mb-4">
                            <h2 class="text-lg font-semibold text-gray-900">Justificatif médical</h2>
                            {% include 'absence/_justification_badge.html.twig' with {'absence': absence} %}
                        </div>

                        {% if absence.justificationDeadline %}
                            <div class="mb-4 p-3 {{ absence.isJustificationOverdue ? 'bg-red-50 border-red-200' : 'bg-blue-50 border-blue-200' }} border rounded-md">
                                <p class="text-sm {{ absence.isJustificationOverdue ? 'text-red-800' : 'text-blue-800' }}">
                                    <svg class="inline w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                                    </svg>
                                    <strong>Échéance:</strong> {{ absence.justificationDeadline|date('d/m/Y à H:i') }}
                                    {% if absence.isJustificationOverdue %}
                                        <span class="font-semibold">(Dépassée - {{ date('now').diff(absence.justificationDeadline).days }} jours de retard)</span>
                                    {% endif %}
                                </p>
                            </div>
                        {% endif %}

                        {% if absence.documents|length > 0 %}
                            <div class="space-y-3">
                                {% for document in absence.documents %}
                                    <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50">
                                        <div class="flex items-start justify-between">
                                            <div class="flex items-center space-x-3">
                                                <svg class="w-10 h-10 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"/>
                                                </svg>
                                                <div>
                                                    <p class="text-sm font-medium text-gray-900">{{ document.fileName }}</p>
                                                    <p class="text-xs text-gray-500">
                                                        Téléversé le {{ document.uploadedAt|date('d/m/Y à H:i') }}
                                                    </p>
                                                    {% if document.status == 'validated' and document.validatedAt %}
                                                        <p class="text-xs text-green-600">
                                                            Validé le {{ document.validatedAt|date('d/m/Y') }}
                                                            {% if document.validatedBy %}
                                                                par {{ document.validatedBy.fullName }}
                                                            {% endif %}
                                                        </p>
                                                    {% elseif document.status == 'rejected' and document.rejectedAt %}
                                                        <p class="text-xs text-red-600">
                                                            Rejeté le {{ document.rejectedAt|date('d/m/Y') }}
                                                        </p>
                                                    {% endif %}
                                                </div>
                                            </div>

                                            {% if document.status == 'pending' %}
                                                <div class="flex space-x-2">
                                                    <form method="post" action="{{ path('admin_absence_justification_validate', {'id': absence.id, 'docId': document.id}) }}" class="inline">
                                                        <button type="submit" class="px-3 py-1 bg-green-600 text-white text-sm rounded hover:bg-green-700">
                                                            Valider
                                                        </button>
                                                    </form>
                                                    <button type="button" class="px-3 py-1 bg-red-600 text-white text-sm rounded hover:bg-red-700"
                                                            data-controller="modal"
                                                            data-action="click->modal#open"
                                                            data-modal-target-param="rejectModal{{ document.id }}">
                                                        Rejeter
                                                    </button>
                                                </div>
                                            {% endif %}
                                        </div>

                                        {% if document.status == 'rejected' and document.rejectionReason %}
                                            <div class="mt-3 p-3 bg-red-50 border-l-4 border-red-400 text-sm text-red-700">
                                                <strong>Motif du rejet:</strong> {{ document.rejectionReason }}
                                            </div>
                                        {% endif %}

                                        {# Modal de rejet #}
                                        {% if document.status == 'pending' %}
                                            <div id="rejectModal{{ document.id }}" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50" data-modal-target="rejectModal{{ document.id }}">
                                                <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
                                                    <form method="post" action="{{ path('admin_absence_justification_reject', {'id': absence.id, 'docId': document.id}) }}">
                                                        <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Rejeter le justificatif</h3>
                                                        <div class="mb-4">
                                                            <label class="block text-sm font-medium text-gray-700 mb-2">Motif du rejet</label>
                                                            <textarea name="rejection_reason" rows="4" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"></textarea>
                                                        </div>
                                                        <div class="flex justify-end space-x-2">
                                                            <button type="button" onclick="document.getElementById('rejectModal{{ document.id }}').classList.add('hidden')" class="px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400">
                                                                Annuler
                                                            </button>
                                                            <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">
                                                                Rejeter
                                                            </button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="text-center py-6">
                                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                </svg>
                                <p class="mt-2 text-sm text-gray-500">Aucun justificatif fourni</p>
                                {% if absence.isJustificationOverdue %}
                                    <p class="mt-1 text-sm text-red-600 font-medium">Échéance dépassée !</p>
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>
                {% endif %}

                {# Historique #}
                {% if absence.status == 'approved' or absence.status == 'rejected' or absence.adminComment %}
                    <div class="bg-white rounded-lg shadow-sm p-6">
                        <h2 class="text-lg font-semibold text-gray-900 mb-4">Historique de traitement</h2>

                        <div class="space-y-4">
                            {% if absence.status == 'approved' %}
                                <div class="flex items-start space-x-3">
                                    <div class="flex-shrink-0">
                                        <svg class="w-6 h-6 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                        </svg>
                                    </div>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900">Absence validée</p>
                                        <p class="text-sm text-gray-500">
                                            Le {{ absence.updatedAt|date('d/m/Y à H:i') }}
                                            {% if absence.validatedBy %}
                                                par {{ absence.validatedBy.fullName }}
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>
                            {% endif %}

                            {% if absence.status == 'rejected' %}
                                <div class="flex items-start space-x-3">
                                    <div class="flex-shrink-0">
                                        <svg class="w-6 h-6 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                        </svg>
                                    </div>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900">Absence refusée</p>
                                        <p class="text-sm text-gray-500">
                                            Le {{ absence.updatedAt|date('d/m/Y à H:i') }}
                                        </p>
                                        {% if absence.rejectionReason %}
                                            <div class="mt-2 p-3 bg-red-50 rounded-md">
                                                <p class="text-sm text-red-800">{{ absence.rejectionReason }}</p>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endif %}

                            {% if absence.adminComment %}
                                <div class="flex items-start space-x-3">
                                    <div class="flex-shrink-0">
                                        <svg class="w-6 h-6 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"/>
                                        </svg>
                                    </div>
                                    <div class="flex-1">
                                        <p class="text-sm font-medium text-gray-900">Commentaire administrateur</p>
                                        <div class="mt-2 p-3 bg-blue-50 rounded-md">
                                            <p class="text-sm text-blue-900 whitespace-pre-line">{{ absence.adminComment }}</p>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
            </div>

            {# Colonne latérale - Formulaire de validation #}
            <div class="space-y-4">
                {% if absence.isPending %}
                    <div class="bg-white rounded-lg shadow-sm p-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Validation de la demande</h3>

                        {{ form_start(validationForm, {
                            'attr': {
                                'data-controller': 'absence-validation'
                            }
                        }) }}

                        <div class="space-y-4">
                            {# Action #}
                            <div>
                                {{ form_label(validationForm.action, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                                {{ form_widget(validationForm.action) }}
                                {{ form_errors(validationForm.action) }}
                            </div>

                            {# Rejection reason (hidden by default, shown when reject is selected) #}
                            <div data-absence-validation-target="rejectionReasonField">
                                {{ form_label(validationForm.rejectionReason) }}
                                {{ form_widget(validationForm.rejectionReason) }}
                                {{ form_errors(validationForm.rejectionReason) }}
                            </div>

                            {# Admin comment #}
                            <div>
                                {{ form_label(validationForm.adminComment) }}
                                {{ form_widget(validationForm.adminComment) }}
                                {{ form_errors(validationForm.adminComment) }}
                            </div>

                            {# Force validation checkbox (only for validate action) #}
                            {% if absence.requiresJustification and not absence.hasValidJustification %}
                                <div class="p-3 bg-yellow-50 border border-yellow-200 rounded-md" data-absence-validation-target="forceCheckboxField">
                                    <div class="flex items-start">
                                        {{ form_widget(validationForm.forceWithoutJustification) }}
                                        <div class="ml-2">
                                            {{ form_label(validationForm.forceWithoutJustification, null, {'label_attr': {'class': 'text-sm text-yellow-800'}}) }}
                                        </div>
                                    </div>
                                    {{ form_errors(validationForm.forceWithoutJustification) }}
                                </div>
                            {% endif %}

                            {# Submit button #}
                            <div class="pt-4 border-t border-gray-200">
                                <button type="submit" class="w-full px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 font-medium shadow-sm">
                                    Valider la décision
                                </button>
                            </div>
                        </div>

                        {{ form_end(validationForm) }}
                    </div>
                {% else %}
                    <div class="bg-gray-50 rounded-lg p-6 text-center">
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <p class="mt-2 text-sm text-gray-600">Cette demande a déjà été traitée</p>
                    </div>
                {% endif %}

                {# Informations complémentaires #}
                <div class="bg-blue-50 rounded-lg p-4">
                    <h3 class="text-sm font-semibold text-blue-900 mb-2">Rappel des règles</h3>
                    <ul class="text-xs text-blue-800 space-y-1 list-disc list-inside">
                        <li>Congés payés: validation hiérarchique requise</li>
                        <li>Maladie: justificatif sous 48h</li>
                        <li>AT: justificatif sous 24h</li>
                        <li>L'employé recevra une notification par email</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
