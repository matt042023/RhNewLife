{% extends 'admin.html.twig' %}

{% block title %}Gestion des absences{% endblock %}

{% block admin_title %}Gestion des absences{% endblock %}
{% block admin_subtitle %}Dashboard RH - Validation et suivi{% endblock %}

{% block admin_actions %}
    <a href="{{ path('admin_absence_create') }}" class="inline-flex items-center px-4 py-2 bg-white text-blue-600 rounded-lg hover:bg-blue-50 transition-colors font-medium shadow-sm">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Créer une absence
    </a>
{% endblock %}

{% block admin_stats %}
    <div class="mt-6 grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-yellow-500 rounded-lg p-3">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-blue-100">En attente</p>
                    <p class="text-2xl font-bold text-white">{{ absences|length }}</p>
                </div>
            </div>
        </div>

        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-red-500 rounded-lg p-3">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-blue-100">Justif. en retard</p>
                    <p class="text-2xl font-bold text-white">{{ overdueJustifications|length }}</p>
                </div>
            </div>
        </div>

        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-blue-500 rounded-lg p-3">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-blue-100">Export</p>
                    <p class="text-xs text-blue-100 mt-1">
                        <a href="{{ path('admin_absence_export') }}" class="underline hover:text-white">Télécharger CSV</a>
                    </p>
                </div>
            </div>
        </div>

        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-purple-500 rounded-lg p-3">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-blue-100">Calendrier</p>
                    <p class="text-xs text-blue-100 mt-1">
                        <a href="{{ path('admin_absence_calendar') }}" class="underline hover:text-white">Voir le planning</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block admin_content %}
    <div class="space-y-6">
        {# Flash messages #}
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="p-4 rounded-lg {{ type == 'success' ? 'bg-green-100 text-green-800' : (type == 'error' ? 'bg-red-100 text-red-800' : 'bg-blue-100 text-blue-800') }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {# Filtres #}
        <div class="bg-white rounded-lg shadow-sm p-4">
            {{ form_start(filterForm, {'attr': {'class': 'grid grid-cols-1 md:grid-cols-5 gap-4'}}) }}
                <div>
                    {{ form_label(filterForm.absenceType, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(filterForm.absenceType) }}
                </div>
                <div>
                    {{ form_label(filterForm.status, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(filterForm.status) }}
                </div>
                <div>
                    {{ form_label(filterForm.justificationStatus, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(filterForm.justificationStatus) }}
                </div>
                <div>
                    {{ form_label(filterForm.dateFrom, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(filterForm.dateFrom) }}
                </div>
                <div>
                    {{ form_label(filterForm.dateTo, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(filterForm.dateTo) }}
                </div>
                <div class="flex items-end">
                    <button type="submit" class="w-full px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 font-medium">
                        Filtrer
                    </button>
                </div>
            {{ form_end(filterForm) }}
        </div>

        {# Alertes justificatifs en retard #}
        {% if overdueJustifications|length > 0 %}
            <div class="bg-red-50 border-l-4 border-red-400 p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-red-800">
                            {{ overdueJustifications|length }} absence(s) avec justificatif en retard
                        </h3>
                        <div class="mt-2 text-sm text-red-700">
                            <ul class="list-disc list-inside space-y-1">
                                {% for absence in overdueJustifications|slice(0, 5) %}
                                    <li>
                                        <a href="{{ path('admin_absence_show', {'id': absence.id}) }}" class="underline hover:text-red-900">
                                            {{ absence.user.fullName }} - {{ absence.absenceType.label }}
                                            (échéance: {{ absence.justificationDeadline|date('d/m/Y') }})
                                        </a>
                                    </li>
                                {% endfor %}
                                {% if overdueJustifications|length > 5 %}
                                    <li class="text-red-600">Et {{ overdueJustifications|length - 5 }} autre(s)...</li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        {# Liste des absences en attente #}
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-gray-900">Demandes en attente de validation</h2>
            </div>

            {% if absences is empty %}
                <div class="px-6 py-12 text-center">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <h3 class="mt-2 text-sm font-medium text-gray-900">Aucune demande en attente</h3>
                    <p class="mt-1 text-sm text-gray-500">Toutes les demandes ont été traitées.</p>
                </div>
            {% else %}
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Employé</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Période</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Durée</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Justificatif</th>
                                <th scope="col" class="relative px-6 py-3">
                                    <span class="sr-only">Actions</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {% for absence in absences %}
                                <tr class="hover:bg-gray-50 {{ absence.isJustificationOverdue ? 'bg-red-50' : '' }}">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div>
                                                <div class="text-sm font-medium text-gray-900">
                                                    {{ absence.user.fullName }}
                                                </div>
                                                <div class="text-sm text-gray-500">
                                                    {{ absence.user.email }}
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">{{ absence.absenceType.label }}</div>
                                        <div class="text-xs text-gray-500">{{ absence.absenceType.code }}</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">
                                            {{ absence.startAt|date('d/m/Y') }}
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            au {{ absence.endAt|date('d/m/Y') }}
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        {{ absence.workingDaysCount|number_format(1, ',', ' ') }}j
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        {% include 'absence/_status_badge.html.twig' with {'absence': absence} %}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        {% include 'absence/_justification_badge.html.twig' with {'absence': absence} %}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <a href="{{ path('admin_absence_show', {'id': absence.id}) }}" class="text-blue-600 hover:text-blue-900 font-medium">
                                            Traiter
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
