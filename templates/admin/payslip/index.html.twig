{% extends 'admin.html.twig' %}

{% block title %}Fiches de Paie{% endblock %}

{% block admin_title %}Fiches de Paie{% endblock %}
{% block admin_subtitle %}Gestion des bulletins de salaire{% endblock %}

{% block admin_content %}
<div class="space-y-6">
    {# Liens de navigation #}
    <div class="flex justify-between items-center">
        <div class="flex space-x-4">
            <a href="{{ path('admin_payroll_index') }}" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                ← Retour aux consolidations
            </a>
        </div>
        <div class="flex space-x-2">
            <a href="{{ path('admin_element_variable_index') }}"
               class="inline-flex items-center px-3 py-1.5 text-sm bg-purple-100 text-purple-800 rounded-lg hover:bg-purple-200 transition">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Éléments variables
            </a>
            <a href="{{ path('admin_cp_counter_index') }}"
               class="inline-flex items-center px-3 py-1.5 text-sm bg-green-100 text-green-800 rounded-lg hover:bg-green-200 transition">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                Compteurs CP
            </a>
        </div>
    </div>

    {# Filtres et actions #}
    <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex justify-between items-center">
            <form method="GET" action="{{ path('admin_payslip_index') }}" class="flex items-center space-x-4">
                <div>
                    <label for="year" class="block text-sm font-medium text-gray-700 mb-1">Année</label>
                    <select name="year" id="year" class="rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                        {% for year in years %}
                            <option value="{{ year }}" {% if year == selectedYear %}selected{% endif %}>{{ year }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <label for="user" class="block text-sm font-medium text-gray-700 mb-1">Éducateur</label>
                    <select name="user" id="user" class="rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                        <option value="">Tous</option>
                        {% for user in users %}
                            <option value="{{ user.id }}" {% if selectedUserId == user.id %}selected{% endif %}>
                                {{ user.fullName }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="pt-6">
                    <button type="submit" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition">
                        Filtrer
                    </button>
                </div>
            </form>
            <div class="flex space-x-2">
                <a href="{{ path('admin_payslip_upload') }}"
                   class="inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
                    </svg>
                    Déposer une fiche
                </a>
                <a href="{{ path('admin_payslip_bulk_upload') }}"
                   class="inline-flex items-center px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-lg transition">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    Dépôt en masse
                </a>
            </div>
        </div>
    </div>

    {# Liste des fiches #}
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Éducateur</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Fichier</th>
                        <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Date de dépôt</th>
                        <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for payslip in payslips %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">{{ payslip.user.fullName }}</div>
                            <div class="text-xs text-gray-500">{{ payslip.user.matricule ?? 'N/A' }}</div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center">
                                <svg class="w-8 h-8 text-red-500 mr-3" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"></path>
                                </svg>
                                <div>
                                    <div class="text-sm text-gray-900">{{ payslip.originalName }}</div>
                                    <div class="text-xs text-gray-500">PDF</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-500">
                            {{ payslip.uploadedAt|date('d/m/Y H:i') }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center">
                            <div class="flex justify-center space-x-2">
                                <a href="{{ path('admin_document_download', {id: payslip.id}) }}"
                                   class="text-blue-600 hover:text-blue-900 text-sm">Télécharger</a>
                                <form method="POST" action="{{ path('admin_payslip_delete', {id: payslip.id}) }}"
                                      class="inline" onsubmit="return confirm('Supprimer cette fiche de paie ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ payslip.id) }}">
                                    <button type="submit" class="text-red-600 hover:text-red-900 text-sm">Supprimer</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="4" class="px-6 py-12 text-center text-gray-500">
                            Aucune fiche de paie déposée.
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
