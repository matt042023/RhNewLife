{% extends 'admin.html.twig' %}

{% block title %}Gestion des documents RH - RH NewLife{% endblock %}

{% block admin_title %}
    {% if isArchiveView|default(false) %}
        Archives documents RH
    {% else %}
        Documents RH
    {% endif %}
{% endblock %}

{% block admin_subtitle %}
    {% if isArchiveView|default(false) %}
        Consultation et gestion des documents archiv√©s
    {% else %}
        Gestion centralis√©e des documents du personnel
    {% endif %}
{% endblock %}

{% block admin_actions %}
    {% if not isArchiveView|default(false) %}
        <a href="{{ path('app_admin_documents_upload') }}" class="inline-flex items-center px-4 py-2 bg-white text-blue-600 font-semibold rounded-lg shadow-md hover:bg-blue-50 transition">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
            </svg>
            Uploader un document
        </a>
    {% endif %}
{% endblock %}

{% block admin_stats %}
    {# Stats cards #}
    <div class="grid grid-cols-2 md:grid-cols-5 gap-4 mt-6">
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 text-white">
            <div class="text-sm opacity-90">Total</div>
            <div class="text-2xl font-bold">{{ stats.total|default(0) }}</div>
        </div>
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 text-white">
            <div class="text-sm opacity-90">En attente</div>
            <div class="text-2xl font-bold">{{ stats.pending|default(0) }}</div>
        </div>
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 text-white">
            <div class="text-sm opacity-90">Valid√©s</div>
            <div class="text-2xl font-bold">{{ stats.validated|default(0) }}</div>
        </div>
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 text-white">
            <div class="text-sm opacity-90">Rejet√©s</div>
            <div class="text-2xl font-bold">{{ stats.rejected|default(0) }}</div>
        </div>
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 text-white">
            <div class="text-sm opacity-90">Archiv√©s</div>
            <div class="text-2xl font-bold">{{ stats.archived|default(0) }}</div>
        </div>
    </div>
{% endblock %}

{% block admin_content %}
<div class="space-y-6" data-controller="document-list">
    {# Filtres avanc√©s #}
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
        <form method="get" action="{{ path('app_admin_documents_list') }}" class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                {# Recherche textuelle #}
                <div class="md:col-span-2">
                    <label for="search" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                        Recherche
                    </label>
                    <input
                        type="text"
                        id="search"
                        name="search"
                        value="{{ filters.search|default('') }}"
                        placeholder="Nom de fichier, commentaire..."
                        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white"
                    >
                </div>

                {# Filtre par salari√© #}
                <div>
                    <label for="user_id" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                        Salari√©
                    </label>
                    <select
                        id="user_id"
                        name="user_id"
                        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white"
                    >
                        <option value="">Tous</option>
                        {% for user in users|default([]) %}
                            <option value="{{ user.id }}" {{ filters.user_id|default('') == user.id ? 'selected' : '' }}>
                                {{ user.fullName }} {% if user.matricule %}({{ user.matricule }}){% endif %}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                {# Filtre par type #}
                <div>
                    <label for="type" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                        Type de document
                    </label>
                    <select
                        id="type"
                        name="type"
                        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white"
                    >
                        <option value="">Tous</option>
                        {% for key, label in types|default({}) %}
                            <option value="{{ key }}" {{ filters.type|default('') == key ? 'selected' : '' }}>
                                {{ label }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                {# Filtre par statut #}
                <div>
                    <label for="status" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                        Statut
                    </label>
                    <select
                        id="status"
                        name="status"
                        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white"
                    >
                        <option value="">Tous</option>
                        {% for key, label in statuses|default({}) %}
                            <option value="{{ key }}" {{ filters.status|default('') == key ? 'selected' : '' }}>
                                {{ label }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                {# Filtre archiv√© #}
                {% if not isArchiveView|default(false) %}
                <div>
                    <label for="archived" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                        √âtat
                    </label>
                    <select
                        id="archived"
                        name="archived"
                        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white"
                    >
                        <option value="">Tous</option>
                        <option value="0" {{ filters.archived|default('') == '0' ? 'selected' : '' }}>Actifs</option>
                        <option value="1" {{ filters.archived|default('') == '1' ? 'selected' : '' }}>Archiv√©s</option>
                    </select>
                </div>
                {% endif %}

                {# Boutons d'action #}
                <div class="md:col-span-2 flex items-end gap-2">
                    <button
                        type="submit"
                        class="flex-1 inline-flex justify-center items-center px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition"
                    >
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                        Filtrer
                    </button>
                    <a
                        href="{{ path('app_admin_documents_list') }}"
                        class="flex-1 inline-flex justify-center items-center px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 font-semibold rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition"
                    >
                        R√©initialiser
                    </a>
                </div>
            </div>
        </form>
    </div>

    {# Actions group√©es #}
    <div data-document-list-target="bulkActions" class="hidden bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-4">
                <span data-document-list-target="selectionCount" class="text-sm font-medium text-gray-700 dark:text-gray-300">
                    0 document(s) s√©lectionn√©(s)
                </span>
            </div>
            <div class="flex items-center gap-2">
                <button
                    type="button"
                    data-document-list-target="validateButton"
                    data-action="click->document-list#validateSelection"
                    class="inline-flex items-center px-3 py-2 bg-green-600 text-white text-sm font-semibold rounded-lg hover:bg-green-700 transition disabled:opacity-50"
                    disabled
                >
                    ‚úì Valider s√©lection
                </button>
                <button
                    type="button"
                    data-document-list-target="archiveButton"
                    data-action="click->document-list#archiveSelection"
                    class="inline-flex items-center px-3 py-2 bg-yellow-600 text-white text-sm font-semibold rounded-lg hover:bg-yellow-700 transition disabled:opacity-50"
                    disabled
                >
                    üì¶ Archiver s√©lection
                </button>
                <button
                    type="button"
                    data-document-list-target="downloadButton"
                    data-action="click->document-list#downloadSelection"
                    class="inline-flex items-center px-3 py-2 bg-blue-600 text-white text-sm font-semibold rounded-lg hover:bg-blue-700 transition disabled:opacity-50"
                    disabled
                >
                    üíæ T√©l√©charger ZIP
                </button>
            </div>
        </div>
    </div>

    {# Tableau des documents #}
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
        {% if documents is empty %}
            {# √âtat vide #}
            <div class="p-12 text-center">
                <svg class="w-20 h-20 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Aucun document trouv√©</h3>
                <p class="text-gray-600 dark:text-gray-400 mb-6">
                    {% if filters|default({})|length > 0 %}
                        Aucun document ne correspond √† vos filtres.
                    {% else %}
                        Commencez par uploader un document.
                    {% endif %}
                </p>
                {% if not isArchiveView|default(false) %}
                    <a href="{{ path('app_admin_documents_upload') }}" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                        </svg>
                        Uploader un document
                    </a>
                {% endif %}
            </div>
        {% else %}
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3">
                                <input type="checkbox" data-document-list-target="selectAll" data-action="change->document-list#toggleAll" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500">
                            </th>
                            <th scope="col" class="px-6 py-3">Type</th>
                            <th scope="col" class="px-6 py-3">Salari√©</th>
                            <th scope="col" class="px-6 py-3">Taille</th>
                            <th scope="col" class="px-6 py-3">Statut</th>
                            {% if isArchiveView|default(false) %}
                                <th scope="col" class="px-6 py-3">Archiv√© le</th>
                            {% else %}
                                <th scope="col" class="px-6 py-3">Upload√© le</th>
                            {% endif %}
                            <th scope="col" class="px-6 py-3 text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for document in documents %}
                            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 transition">
                                <td class="px-6 py-4">
                                    <input type="checkbox" value="{{ document.id }}" data-document-list-target="checkbox" data-action="change->document-list#updateSelection" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500">
                                </td>
                                <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">
                                    <div class="flex items-center gap-2">
                                        {% include 'components/documents/_document_type_icon.html.twig' with {type: document.type} %}
                                        <span>{{ document.typeLabel ?? (types[document.type]|default(document.type)) }}</span>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    {% if document.user %}
                                        <a href="{{ path('app_admin_users_view', {id: document.user.id}) }}" class="text-blue-600 dark:text-blue-400 hover:underline">
                                            {{ document.user.fullName }}
                                        </a>
                                    {% else %}
                                        <span class="text-gray-400">‚Äî</span>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4">{{ document.fileSizeFormatted|default('‚Äî') }}</td>
                                <td class="px-6 py-4">
                                    {% include 'components/documents/_document_status_badge.html.twig' with {status: document.status, isArchived: document.isArchived|default(false)} %}
                                </td>
                                <td class="px-6 py-4">
                                    {% if isArchiveView|default(false) and document.archivedAt %}
                                        {{ document.archivedAt|date('d/m/Y H:i') }}
                                    {% elseif document.uploadedAt %}
                                        {{ document.uploadedAt|date('d/m/Y H:i') }}
                                    {% else %}
                                        <span class="text-gray-400">‚Äî</span>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <a href="{{ path('app_admin_documents_view', {id: document.id}) }}" class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                        </svg>
                                        D√©tails
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {# Pagination #}
            {% if pagination|default(false) %}
                <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700">
                    <div class="flex items-center justify-between">
                        <div class="text-sm text-gray-700 dark:text-gray-400">
                            Affichage de <span class="font-semibold">{{ pagination.from }}</span> √† <span class="font-semibold">{{ pagination.to }}</span> sur <span class="font-semibold">{{ pagination.total }}</span> documents
                        </div>
                        <nav class="inline-flex rounded-md shadow-sm">
                            {# Pagination buttons (√† impl√©menter avec donn√©es r√©elles) #}
                            <a href="#" class="px-3 py-2 ml-0 leading-tight text-gray-500 bg-white border border-gray-300 rounded-l-lg hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700">
                                Pr√©c√©dent
                            </a>
                            <a href="#" class="px-3 py-2 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700">
                                1
                            </a>
                            <a href="#" class="px-3 py-2 leading-tight text-gray-500 bg-white border border-gray-300 rounded-r-lg hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700">
                                Suivant
                            </a>
                        </nav>
                    </div>
                </div>
            {% endif %}
        {% endif %}
    </div>

    {# Lien vers archives (si pas d√©j√† dans la vue archives) #}
    {% if not isArchiveView|default(false) %}
        <div class="text-center">
            <a href="{{ path('app_admin_documents_archives') }}" class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline font-semibold">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
                </svg>
                Consulter les archives
            </a>
        </div>
    {% endif %}
</div>

{% endblock %}
