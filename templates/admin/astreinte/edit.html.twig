{% extends 'admin.html.twig' %}

{% block title %}Modifier l'astreinte{% endblock %}

{% block admin_title %}Modifier l'astreinte{% endblock %}
{% block admin_subtitle %}{{ astreinte.periodLabel }} ({{ astreinte.startAt|date('d/m/Y') }} - {{ astreinte.endAt|date('d/m/Y') }}){% endblock %}

{% block admin_content %}
    <div class="max-w-3xl">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            {{ form_start(form) }}
                <div class="space-y-4">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            {{ form_label(form.startAt, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            {{ form_widget(form.startAt) }}
                            {{ form_errors(form.startAt) }}
                        </div>
                        <div>
                            {{ form_label(form.endAt, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            {{ form_widget(form.endAt) }}
                            {{ form_errors(form.endAt) }}
                        </div>
                    </div>

                    <div>
                        {{ form_label(form.periodLabel, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                        {{ form_widget(form.periodLabel) }}
                        {{ form_errors(form.periodLabel) }}
                        <p class="mt-1 text-sm text-gray-500">Exemple: S48, Semaine 48, 25 nov - 1 déc</p>
                    </div>

                    <div>
                        {{ form_label(form.educateur, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                        {{ form_widget(form.educateur) }}
                        {{ form_errors(form.educateur) }}
                    </div>

                    <div>
                        {{ form_label(form.notes, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                        {{ form_widget(form.notes) }}
                        {{ form_errors(form.notes) }}
                    </div>
                </div>

                <div class="mt-6 flex gap-3">
                    <button type="submit" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                        Modifier l'astreinte
                    </button>
                    <a href="{{ path('admin_astreinte_index') }}"
                       class="px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors font-medium">
                        Annuler
                    </a>
                    <form method="post" action="{{ path('admin_astreinte_delete', {id: astreinte.id}) }}"
                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette astreinte ?')"
                          class="ml-auto">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ astreinte.id) }}">
                        <button type="submit" class="px-6 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors font-medium">
                            Supprimer
                        </button>
                    </form>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
