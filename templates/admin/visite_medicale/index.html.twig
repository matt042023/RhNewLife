{% extends 'admin.html.twig' %}

{% block title %}Visites Médicales{% endblock %}

{% block admin_title %}Visites Médicales{% endblock %}
{% block admin_subtitle %}Suivi médical des salariés{% endblock %}

{% block admin_actions %}
    <a href="{{ path('admin_appointment_medical_create') }}" class="inline-flex items-center px-4 py-2 bg-white text-blue-600 rounded-lg hover:bg-blue-50 transition-colors font-medium shadow-sm">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Nouvelle visite médicale
    </a>
{% endblock %}

{% block admin_stats %}
    <div class="mt-6 grid grid-cols-1 md:grid-cols-4 gap-4">
        {# Total visits #}
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-blue-500 rounded-lg p-3">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-blue-100">Total</p>
                    <p class="text-2xl font-bold text-white">{{ stats.total }}</p>
                </div>
            </div>
        </div>

        {# Expiring soon #}
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-orange-500 rounded-lg p-3">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-blue-100">À renouveler (30j)</p>
                    <p class="text-2xl font-bold text-white">{{ stats.expiringSoon }}</p>
                </div>
            </div>
        </div>

        {# Expired #}
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-red-500 rounded-lg p-3">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-blue-100">Expirées</p>
                    <p class="text-2xl font-bold text-white">{{ stats.expired }}</p>
                </div>
            </div>
        </div>

        {# By type - Most frequent #}
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-green-500 rounded-lg p-3">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 00 2-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-blue-100">Statistiques</p>
                    <p class="text-xs text-blue-100 mt-1">Par type et aptitude</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block admin_content %}
    <div class="space-y-6">
        {# Flash messages #}
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="p-4 rounded-lg {{ type == 'success' ? 'bg-green-100 text-green-800' : (type == 'error' ? 'bg-red-100 text-red-800' : 'bg-blue-100 text-blue-800') }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {# Filters #}
        <div class="bg-white rounded-lg shadow-sm p-4">
            {{ form_start(filterForm, {'attr': {'class': 'space-y-4'}}) }}
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div>
                        {{ form_label(filterForm.user, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(filterForm.user) }}
                    </div>
                    <div>
                        {{ form_label(filterForm.type, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(filterForm.type) }}
                    </div>
                    <div>
                        {{ form_label(filterForm.status, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(filterForm.status) }}
                    </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div>
                        {{ form_label(filterForm.aptitude, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(filterForm.aptitude) }}
                    </div>
                    <div>
                        {{ form_label(filterForm.dateFrom, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(filterForm.dateFrom) }}
                    </div>
                    <div>
                        {{ form_label(filterForm.dateTo, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(filterForm.dateTo) }}
                    </div>
                    <div class="flex items-end">
                        <button type="submit" class="w-full px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 font-medium">
                            Filtrer
                        </button>
                    </div>
                </div>
            {{ form_end(filterForm) }}
        </div>

        {# Visits list #}
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-gray-900">Liste des visites médicales</h2>
            </div>

            {% if visites is empty %}
                <div class="px-6 py-12 text-center">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                    </svg>
                    <h3 class="mt-2 text-sm font-medium text-gray-900">Aucune visite médicale</h3>
                    <p class="mt-1 text-sm text-gray-500">Commencez par créer une nouvelle visite médicale.</p>
                </div>
            {% else %}
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Salarié</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date visite</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Validité</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Aptitude</th>
                                <th scope="col" class="relative px-6 py-3">
                                    <span class="sr-only">Actions</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {% for visite in visites %}
                                <tr class="hover:bg-gray-50 {{ visite.isProgrammee ? 'bg-blue-50' : (visite.isExpired ? 'bg-red-50' : (visite.isExpiringSoon(30) ? 'bg-orange-50' : '')) }}">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-900">
                                            {{ visite.user.fullName }}
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            {{ visite.user.position ?? 'Éducateur' }}
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 py-1 text-xs font-medium rounded-full
                                            {% if visite.type == 'embauche' %}bg-green-100 text-green-800
                                            {% elseif visite.type == 'periodique' %}bg-blue-100 text-blue-800
                                            {% elseif visite.type == 'reprise' %}bg-purple-100 text-purple-800
                                            {% else %}bg-gray-100 text-gray-800{% endif %}">
                                            {{ visite.typeLabel }}
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 py-1 text-xs font-medium rounded-full
                                            {% if visite.isProgrammee %}bg-blue-100 text-blue-800
                                            {% elseif visite.isEffectuee %}bg-green-100 text-green-800
                                            {% else %}bg-gray-100 text-gray-800{% endif %}">
                                            {{ visite.statusLabel }}
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        {% if visite.visitDate %}
                                            {{ visite.visitDate|date('d/m/Y') }}
                                        {% else %}
                                            <span class="text-gray-400">-</span>
                                        {% endif %}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        {% if visite.expiryDate %}
                                            <div class="text-sm text-gray-900">{{ visite.expiryDate|date('d/m/Y') }}</div>
                                            {% if visite.isExpired %}
                                                <span class="text-xs text-red-600 font-medium">Expirée</span>
                                            {% elseif visite.isExpiringSoon(30) %}
                                                <span class="text-xs text-orange-600 font-medium">{{ visite.daysUntilExpiry }}j restants</span>
                                            {% endif %}
                                        {% else %}
                                            <span class="text-gray-400">-</span>
                                        {% endif %}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        {% if visite.aptitude %}
                                            <span class="px-2 py-1 text-xs font-medium rounded-full
                                                {% if visite.aptitude == 'apte' %}bg-green-100 text-green-800
                                                {% elseif visite.aptitude == 'apte_avec_reserve' %}bg-yellow-100 text-yellow-800
                                                {% else %}bg-red-100 text-red-800{% endif %}">
                                                {{ visite.aptitudeLabel }}
                                            </span>
                                        {% else %}
                                            <span class="text-gray-400">-</span>
                                        {% endif %}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <a href="{{ path('admin_visite_medicale_show', {'id': visite.id}) }}" class="text-blue-600 hover:text-blue-900 mr-3">
                                            Voir
                                        </a>
                                        {% if visite.isProgrammee %}
                                            <a href="{{ path('admin_visite_medicale_complete', {'id': visite.id}) }}" class="text-green-600 hover:text-green-900">
                                                Compléter
                                            </a>
                                        {% elseif visite.isEffectuee %}
                                            <a href="{{ path('admin_visite_medicale_edit', {'id': visite.id}) }}" class="text-gray-600 hover:text-gray-900">
                                                Modifier
                                            </a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
