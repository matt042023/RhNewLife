{% extends 'admin.html.twig' %}

{% block title %}Compléter la visite médicale{% endblock %}

{% block admin_title %}Compléter les résultats de la visite médicale{% endblock %}
{% block admin_subtitle %}{{ visite.user.fullName }} - {{ visite.typeLabel }}{% endblock %}

{% block admin_content %}
    <div class="space-y-6">
        {# Flash messages #}
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="p-4 rounded-lg {{ type == 'success' ? 'bg-green-100 text-green-800' : (type == 'error' ? 'bg-red-100 text-red-800' : 'bg-blue-100 text-blue-800') }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {# Information sur le RDV lié #}
        {% if visite.appointment %}
            <div class="bg-blue-50 border-l-4 border-blue-400 p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-blue-800">
                            Rendez-vous programmé
                        </h3>
                        <div class="mt-1 text-sm text-blue-700">
                            <p><strong>Date:</strong> {{ visite.appointment.startAt|date('d/m/Y à H:i') }}</p>
                            <p><strong>Durée:</strong> {{ visite.appointment.durationMinutes }} minutes</p>
                            {% if visite.appointment.location %}
                                <p><strong>Lieu:</strong> {{ visite.appointment.location }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        {# Information importante #}
        <div class="bg-green-50 border-l-4 border-green-400 p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                    </svg>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium text-green-800">
                        Complétion des résultats
                    </h3>
                    <div class="mt-2 text-sm text-green-700">
                        <p>Après validation, le salarié sera automatiquement notifié des résultats de sa visite médicale.</p>
                    </div>
                </div>
            </div>
        </div>

        {# Formulaire #}
        <div class="bg-white rounded-lg shadow-sm p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-6">Résultats de la visite médicale</h2>

            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="space-y-6">
                {# Dates #}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        {{ form_label(form.visitDate, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                        {{ form_widget(form.visitDate, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
                        {{ form_errors(form.visitDate) }}
                    </div>

                    <div>
                        {{ form_label(form.expiryDate, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                        {{ form_widget(form.expiryDate, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
                        {{ form_errors(form.expiryDate) }}
                        {{ form_help(form.expiryDate) }}
                    </div>
                </div>

                {# Organisme médical #}
                <div>
                    {{ form_label(form.medicalOrganization, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.medicalOrganization, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
                    {{ form_errors(form.medicalOrganization) }}
                </div>

                {# Aptitude #}
                <div>
                    {{ form_label(form.aptitude, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-3'}}) }}
                    <div class="space-y-2">
                        {{ form_widget(form.aptitude, {'attr': {'class': 'space-y-2'}}) }}
                    </div>
                    {{ form_errors(form.aptitude) }}
                    {{ form_help(form.aptitude) }}
                </div>

                {# Observations #}
                <div>
                    {{ form_label(form.observations, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.observations, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500', 'rows': 5}}) }}
                    {{ form_errors(form.observations) }}
                    {{ form_help(form.observations) }}
                </div>

                {# Certificat médical #}
                <div>
                    {{ form_label(form.certificateFile, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.certificateFile, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
                    {{ form_errors(form.certificateFile) }}
                    {{ form_help(form.certificateFile) }}
                </div>
            </div>

            {# Actions #}
            <div class="flex justify-end space-x-3 mt-8">
                <a href="{{ path('admin_visite_medicale_show', {'id': visite.id}) }}" class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Annuler
                </a>
                <button type="submit" class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                    Enregistrer et notifier le salarié
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
