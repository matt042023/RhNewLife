{% extends 'admin.html.twig' %}

{% block title %}Prévisualisation Contrat - RH NewLife{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 p-8">
	<div class="max-w-5xl mx-auto">

		{# Header #}
		<div class="flex items-center justify-between mb-8">
			<div>
				<a href="{{ path('app_admin_contracts_view', {id: contract.id}) }}" class="text-primary hover:underline mb-2 inline-block">
					← Retour au contrat
				</a>
				<h1 class="text-3xl font-bold text-gray-900">Prévisualisation du brouillon</h1>
				<p class="text-gray-600 mt-1">{{ contract.user.fullName }} - {{ contract.typeLabel }}</p>
			</div>
		</div>

		{# Actions #}
		<div class="bg-white rounded-2xl shadow-lg p-6 mb-6">
			<div class="flex gap-3">
				<form method="post" action="{{ path('app_admin_contracts_send_for_signature', {id: contract.id}) }}">
					<button type="submit" class="btn btn-primary">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
						</svg>
						Envoyer pour signature
					</button>
				</form>
				<a href="{{ path('app_admin_contracts_edit', {id: contract.id}) }}" class="btn btn-secondary">
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
					</svg>
					Modifier le contrat
				</a>
			</div>
		</div>

		{# Contenu du brouillon #}
		<div class="bg-white rounded-2xl shadow-lg p-8">
			{{ fileContent|raw }}
		</div>
	</div>
</div>
{% endblock %}
