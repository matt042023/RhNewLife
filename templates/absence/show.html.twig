{% extends 'layout/dashboard_base.html.twig' %}

{% block title %}Détail absence - {{ absence.absenceType.label }}{% endblock %}

{% block page_header %}
    <div class="px-4 py-6 lg:px-6">
        <div class="flex items-center">
            <a href="{{ path('app_absence_index') }}" class="mr-4 text-blue-100 hover:text-white">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
            </a>
            <div class="flex-1">
                <h1 class="text-2xl md:text-3xl font-bold text-white">
                    {{ absence.absenceType.label }}
                </h1>
                <p class="text-blue-100 text-sm md:text-base mt-1">
                    Du {{ absence.startAt|date('d/m/Y') }} au {{ absence.endAt|date('d/m/Y') }}
                </p>
            </div>
            <div>
                {% include 'absence/_status_badge.html.twig' with {'absence': absence} %}
            </div>
        </div>
    </div>
{% endblock %}

{% block dashboard_content %}
    <div class="px-4 py-6 lg:px-6 max-w-5xl mx-auto">
        {# Flash messages #}
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-4 p-4 rounded-lg {{ type == 'success' ? 'bg-green-100 text-green-800' : (type == 'error' ? 'bg-red-100 text-red-800' : 'bg-blue-100 text-blue-800') }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            {# Colonne principale #}
            <div class="lg:col-span-2 space-y-6">
                {# Informations générales #}
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <h2 class="text-lg font-semibold text-gray-900 mb-4">Informations générales</h2>

                    <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Type d'absence</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ absence.absenceType.label }}</dd>
                        </div>

                        <div>
                            <dt class="text-sm font-medium text-gray-500">Statut</dt>
                            <dd class="mt-1">
                                {% include 'absence/_status_badge.html.twig' with {'absence': absence} %}
                            </dd>
                        </div>

                        <div>
                            <dt class="text-sm font-medium text-gray-500">Date de début</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ absence.startAt|date('d/m/Y à H:i') }}</dd>
                        </div>

                        <div>
                            <dt class="text-sm font-medium text-gray-500">Date de fin</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ absence.endAt|date('d/m/Y à H:i') }}</dd>
                        </div>

                        <div>
                            <dt class="text-sm font-medium text-gray-500">Durée</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ absence.workingDaysCount|number_format(1, ',', ' ') }} jour{{ absence.workingDaysCount > 1 ? 's' : '' }} ouvré{{ absence.workingDaysCount > 1 ? 's' : '' }}</dd>
                        </div>

                        <div>
                            <dt class="text-sm font-medium text-gray-500">Demande créée le</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ absence.createdAt|date('d/m/Y à H:i') }}</dd>
                        </div>
                    </dl>

                    {% if absence.reason %}
                        <div class="mt-4 pt-4 border-t border-gray-200">
                            <dt class="text-sm font-medium text-gray-500 mb-2">Motif</dt>
                            <dd class="text-sm text-gray-900 whitespace-pre-line">{{ absence.reason }}</dd>
                        </div>
                    {% endif %}
                </div>

                {# Justificatifs #}
                {% if absence.requiresJustification %}
                    <div class="bg-white rounded-lg shadow-sm p-6">
                        <div class="flex items-center justify-between mb-4">
                            <h2 class="text-lg font-semibold text-gray-900">Justificatif médical</h2>
                            {% include 'absence/_justification_badge.html.twig' with {'absence': absence} %}
                        </div>

                        {% if absence.justificationDeadline %}
                            <div class="mb-4 p-3 {{ absence.isJustificationOverdue ? 'bg-red-50 border-red-200' : 'bg-blue-50 border-blue-200' }} border rounded-md">
                                <p class="text-sm {{ absence.isJustificationOverdue ? 'text-red-800' : 'text-blue-800' }}">
                                    <svg class="inline w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                                    </svg>
                                    <strong>Échéance:</strong> {{ absence.justificationDeadline|date('d/m/Y à H:i') }}
                                    {% if absence.isJustificationOverdue %}
                                        <span class="font-semibold">(Dépassée)</span>
                                    {% endif %}
                                </p>
                            </div>
                        {% endif %}

                        {% if absence.documents|length > 0 %}
                            <div class="space-y-3">
                                {% for document in absence.documents %}
                                    <div class="flex items-center justify-between p-3 border border-gray-200 rounded-md hover:bg-gray-50">
                                        <div class="flex items-center space-x-3">
                                            <svg class="w-8 h-8 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"/>
                                            </svg>
                                            <div>
                                                <p class="text-sm font-medium text-gray-900">{{ document.fileName }}</p>
                                                <p class="text-xs text-gray-500">
                                                    Envoyé le {{ document.uploadedAt|date('d/m/Y à H:i') }}
                                                </p>
                                            </div>
                                        </div>
                                        <div class="flex items-center space-x-2">
                                            {% if document.status == 'pending' %}
                                                <span class="text-xs px-2 py-1 bg-yellow-100 text-yellow-800 rounded">En attente de validation</span>
                                            {% elseif document.status == 'validated' %}
                                                <span class="text-xs px-2 py-1 bg-green-100 text-green-800 rounded">Validé</span>
                                            {% elseif document.status == 'rejected' %}
                                                <span class="text-xs px-2 py-1 bg-red-100 text-red-800 rounded">Rejeté</span>
                                            {% endif %}

                                            {% if document.status == 'pending' and absence.canBeEdited %}
                                                <form method="post" action="{{ path('app_absence_justification_delete', {'id': absence.id, 'docId': document.id}) }}" class="inline">
                                                    <button type="submit" class="text-red-600 hover:text-red-800 text-sm" onclick="return confirm('Voulez-vous vraiment supprimer ce document ?')">
                                                        Supprimer
                                                    </button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    </div>

                                    {% if document.status == 'rejected' and document.rejectionReason %}
                                        <div class="ml-11 p-3 bg-red-50 border-l-4 border-red-400 text-sm text-red-700">
                                            <strong>Motif du rejet:</strong> {{ document.rejectionReason }}
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="text-center py-6">
                                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                </svg>
                                <p class="mt-2 text-sm text-gray-500">Aucun justificatif fourni</p>
                            </div>
                        {% endif %}

                        {# Upload de justificatif #}
                        {% if absence.canBeEdited or (absence.justificationStatus in ['pending', 'rejected']) %}
                            <form method="post" action="{{ path('app_absence_justification_upload', {'id': absence.id}) }}" enctype="multipart/form-data" class="mt-4 pt-4 border-t border-gray-200">
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    {% if absence.documents|length > 0 %}
                                        Remplacer le justificatif
                                    {% else %}
                                        Ajouter un justificatif
                                    {% endif %}
                                </label>
                                <div class="flex items-center space-x-3">
                                    <input type="file" name="justification" accept=".pdf,.jpg,.jpeg,.png" class="flex-1 text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" required>
                                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 text-sm font-medium">
                                        Envoyer
                                    </button>
                                </div>
                            </form>
                        {% endif %}
                    </div>
                {% endif %}

                {# Historique des validations #}
                {% if absence.status == 'approved' or absence.status == 'rejected' %}
                    <div class="bg-white rounded-lg shadow-sm p-6">
                        <h2 class="text-lg font-semibold text-gray-900 mb-4">Historique de traitement</h2>

                        {% if absence.status == 'approved' %}
                            <div class="flex items-start space-x-3 mb-4">
                                <div class="flex-shrink-0">
                                    <svg class="w-6 h-6 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                    </svg>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-gray-900">Absence validée</p>
                                    <p class="text-sm text-gray-500">
                                        Le {{ absence.updatedAt|date('d/m/Y à H:i') }}
                                        {% if absence.validatedBy %}
                                            par {{ absence.validatedBy.fullName }}
                                        {% endif %}
                                    </p>
                                </div>
                            </div>
                        {% endif %}

                        {% if absence.status == 'rejected' %}
                            <div class="flex items-start space-x-3">
                                <div class="flex-shrink-0">
                                    <svg class="w-6 h-6 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                    </svg>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-gray-900">Absence refusée</p>
                                    <p class="text-sm text-gray-500">
                                        Le {{ absence.updatedAt|date('d/m/Y à H:i') }}
                                    </p>
                                    {% if absence.rejectionReason %}
                                        <div class="mt-2 p-3 bg-red-50 rounded-md">
                                            <p class="text-sm text-red-800">{{ absence.rejectionReason }}</p>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                {% endif %}
            </div>

            {# Colonne latérale - Actions #}
            <div class="space-y-4">
                {# Actions disponibles #}
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <h3 class="text-sm font-semibold text-gray-900 mb-4">Actions</h3>

                    <div class="space-y-2">
                        {% if absence.canBeCancelled %}
                            <form method="post" action="{{ path('app_absence_cancel', {'id': absence.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir annuler cette demande ?')">
                                <button type="submit" class="w-full px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 text-sm font-medium">
                                    Annuler la demande
                                </button>
                            </form>
                        {% endif %}

                        <a href="{{ path('app_absence_index') }}" class="block w-full px-4 py-2 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 text-sm font-medium text-center">
                            Retour à la liste
                        </a>
                    </div>
                </div>

                {# Informations complémentaires #}
                <div class="bg-blue-50 rounded-lg p-4">
                    <h3 class="text-sm font-semibold text-blue-900 mb-2">Besoin d'aide ?</h3>
                    <p class="text-sm text-blue-800">
                        Pour toute question concernant cette absence, contactez le service RH.
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
