{# Composant réutilisable pour afficher une carte de rendez-vous #}

{% set statusColors = {
    'EN_ATTENTE': 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200',
    'CONFIRME': 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200',
    'REFUSE': 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200',
    'ANNULE': 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200',
    'TERMINE': 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200'
} %}

{% set typeColors = {
    'CONVOCATION': 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200',
    'DEMANDE': 'bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-200',
    'VISITE_MEDICALE': 'bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-200'
} %}

{% set statusLabels = {
    'EN_ATTENTE': 'En attente',
    'CONFIRME': 'Confirmé',
    'REFUSE': 'Refusé',
    'ANNULE': 'Annulé',
    'TERMINE': 'Terminé'
} %}

{% set typeLabels = {
    'CONVOCATION': 'Convocation',
    'DEMANDE': 'Demande',
    'VISITE_MEDICALE': 'Visite médicale'
} %}

<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 hover:shadow-lg transition">
    {# En-tête avec badges #}
    <div class="flex justify-between items-start mb-4">
        <div class="flex gap-2">
            <span class="px-2 py-1 text-xs font-semibold rounded {{ typeColors[appointment.type] ?? 'bg-gray-100 text-gray-800' }}">
                {{ typeLabels[appointment.type] ?? appointment.type }}
            </span>
            <span class="px-2 py-1 text-xs font-semibold rounded {{ statusColors[appointment.statut] ?? 'bg-gray-100 text-gray-800' }}">
                {{ statusLabels[appointment.statut] ?? appointment.statut }}
            </span>
        </div>
    </div>

    {# Titre #}
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
        {{ appointment.subject }}
    </h3>

    {# Organisateur #}
    <p class="text-sm text-gray-600 dark:text-gray-400 mb-3">
        <svg class="inline w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
        Organisé par <strong>{{ appointment.organizer.fullName }}</strong>
    </p>

    {# Date et heure #}
    <div class="mb-3">
        <div class="flex items-center text-sm text-gray-700 dark:text-gray-300 mb-1">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <span class="font-medium">{{ appointment.startAt|date('d/m/Y à H:i') }}</span>
        </div>
        {% if appointment.durationMinutes %}
            <div class="flex items-center text-sm text-gray-600 dark:text-gray-400">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span>{{ appointment.durationMinutes }} minutes</span>
            </div>
        {% endif %}
    </div>

    {# Lieu #}
    {% if appointment.location %}
        <div class="flex items-center text-sm text-gray-600 dark:text-gray-400 mb-3">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span>{{ appointment.location }}</span>
        </div>
    {% endif %}

    {# Participants #}
    <div class="flex items-center text-sm text-gray-600 dark:text-gray-400 mb-4">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
        <span>{{ appointment.appointmentParticipants|length }} participant(s)</span>
    </div>

    {# Motif de refus si refusé #}
    {% if appointment.statut == 'REFUSE' and appointment.refusalReason %}
        <div class="mb-4 p-3 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded">
            <p class="text-sm text-red-800 dark:text-red-200">
                <strong>Motif du refus :</strong> {{ appointment.refusalReason }}
            </p>
        </div>
    {% endif %}

    {# Bouton d'action #}
    <div class="mt-4">
        <a href="{{ path('app_appointment_show', {id: appointment.id}) }}"
           class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition w-full justify-center">
            Voir les détails
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
        </a>
    </div>
</div>
