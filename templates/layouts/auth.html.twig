<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}RH NewLife
			{% endblock %}
		</title>

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body class="bg-gradient-to-br from-blue-50 via-white to-green-50 min-h-screen">

		<div
			class="min-h-screen flex flex-col justify-center py-12 sm:px-6 lg:px-8">

			{# Logo / Header #}
			<div class="sm:mx-auto sm:w-full  text-center mb-8">
				<div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl shadow-lg mb-4">
					<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
					</svg>
				</div>
				<h1 class="text-3xl font-bold text-gray-900">
					{% block page_title %}RH NewLife
					{% endblock %}
				</h1>
				{% block page_subtitle %}
					<p class="mt-2 text-sm text-gray-600">Gestion des Ressources Humaines</p>
				{% endblock %}
			</div>

			{# Flash Messages #}
			<div class="sm:mx-auto sm:w-full  px-4 mb-4">
				{% for label, messages in app.flashes %}
					{% for message in messages %}
						<div class="alert alert-{{ label == 'error' ? 'error' : (label == 'success' ? 'success' : (label == 'warning' ? 'warning' : 'info')) }} rounded-lg shadow-md">
							<div class="flex items-center gap-2">
								{% if label == 'success' %}
									<svg class="w-5 h-5" fill="currentColor" viewbox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
									</svg>
								{% elseif label == 'error' %}
									<svg class="w-5 h-5" fill="currentColor" viewbox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
									</svg>
								{% else %}
									<svg class="w-5 h-5" fill="currentColor" viewbox="0 0 20 20">
										<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
									</svg>
								{% endif %}
								<span>{{ message }}</span>
							</div>
						</div>
					{% endfor %}
				{% endfor %}
			</div>

			{# Main Content #}
			<div class="w-full max-w-3xl md:max-w-4xl lg:max-w-5xl mx-auto">
				<div class="bg-white py-8 px-4 shadow-2xl sm:rounded-2xl sm:px-10"> {% block content %}{% endblock %}
					</div>
				</div>

				{# Footer #}
				<div class="mt-8 text-center">
					{% block footer %}
						<p class="text-xs text-gray-500">
							&copy;
							{{ "now"|date("Y") }}
							RH NewLife. Tous droits réservés.
						</p>
					{% endblock %}
				</div>
			</div>
		</body>
	</html>
