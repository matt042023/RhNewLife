{% extends 'director.html.twig' %}

{% block title %}Historique paie - {{ user.fullName }}{% endblock %}

{% block director_title %}Historique paie{% endblock %}
{% block director_subtitle %}{{ user.fullName }}{% endblock %}

{% block director_content %}
<div class="space-y-6">
    {# Navigation #}
    <a href="{{ path('director_payroll_index') }}" class="inline-flex items-center text-blue-600 hover:text-blue-800">
        <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Retour au suivi
    </a>

    {# Informations utilisateur et CP #}
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="bg-white rounded-lg shadow-sm p-6">
            <div class="flex items-center">
                <div class="w-16 h-16 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 font-bold text-xl mr-4">
                    {{ user.firstName|first }}{{ user.lastName|first }}
                </div>
                <div>
                    <h3 class="text-lg font-medium text-gray-900">{{ user.fullName }}</h3>
                    <p class="text-sm text-gray-500">{{ user.matricule ?? 'Sans matricule' }}</p>
                    <p class="text-sm text-gray-500">{{ user.email }}</p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Solde CP actuel</h3>
            <div class="text-3xl font-bold {% if cp_counter.soldeActuel >= 10 %}text-green-600{% elseif cp_counter.soldeActuel >= 5 %}text-yellow-600{% else %}text-red-600{% endif %}">
                {{ cp_counter.soldeActuel|number_format(2, ',', ' ') }} j
            </div>
            <p class="text-sm text-gray-500 mt-1">Période {{ cp_counter.periodeReference }}</p>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Détail CP</h3>
            <div class="space-y-1 text-sm">
                <div class="flex justify-between">
                    <span class="text-gray-500">Report</span>
                    <span class="text-gray-900">{{ cp_counter.soldeInitial|number_format(2, ',', ' ') }} j</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-green-600">Acquis</span>
                    <span class="text-green-600">+{{ cp_counter.acquis|number_format(2, ',', ' ') }} j</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-red-600">Pris</span>
                    <span class="text-red-600">-{{ cp_counter.pris|number_format(2, ',', ' ') }} j</span>
                </div>
            </div>
        </div>
    </div>

    {# Filtre année #}
    <div class="bg-white rounded-lg shadow-sm p-6">
        <form method="GET" class="flex items-center space-x-4">
            <div>
                <label for="year" class="block text-sm font-medium text-gray-700 mb-1">Année</label>
                <select name="year" id="year" class="rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" onchange="this.form.submit()">
                    {% for year in years %}
                        <option value="{{ year }}" {% if year == selected_year %}selected{% endif %}>{{ year }}</option>
                    {% endfor %}
                </select>
            </div>
        </form>
    </div>

    {# Historique des rapports #}
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="px-6 py-4 border-b">
            <h3 class="text-lg font-medium text-gray-900">Rapports {{ selected_year }}</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Mois</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Jours travaillés</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Événements</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Absences</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">CP pris</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Variables</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Statut</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Action</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for consolidation in consolidations %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            {{ consolidation.periodLabel }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-900">
                            {{ consolidation.joursTravailes|number_format(2, ',', ' ') }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-900">
                            {{ consolidation.joursEvenements|number_format(2, ',', ' ') }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-900">
                            {{ consolidation.totalJoursAbsence|number_format(2, ',', ' ') }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-900">
                            {{ consolidation.cpPris|number_format(2, ',', ' ') }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm {% if consolidation.totalVariables != 0 %}{% if consolidation.totalVariables > 0 %}text-green-600{% else %}text-red-600{% endif %}{% else %}text-gray-400{% endif %}">
                            {{ consolidation.totalVariables|number_format(2, ',', ' ') }} €
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center">
                            {% if consolidation.isDraft %}
                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                                    Brouillon
                                </span>
                            {% elseif consolidation.isExported %}
                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">
                                    Exporté
                                </span>
                            {% else %}
                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                                    Validé
                                </span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center">
                            <a href="{{ path('director_payroll_show', {id: consolidation.id}) }}" class="text-blue-600 hover:text-blue-900 text-sm">
                                Détail
                            </a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="8" class="px-6 py-12 text-center text-gray-500">
                            Aucun rapport pour cette année.
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
