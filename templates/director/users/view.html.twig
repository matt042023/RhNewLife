{% extends 'base.html.twig' %}

{% block title %}{{ user.firstName }} {{ user.lastName }} - RH NewLife{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4 py-8">
        {# Header #}
        <div class="mb-8">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <a href="{{ path('app_director_users_list') }}" class="text-blue-600 hover:text-blue-800 dark:text-blue-400 text-sm mb-2 inline-flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Retour à la liste
                    </a>
                    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">{{ user.firstName }} {{ user.lastName }}</h1>
                    <p class="text-gray-600 dark:text-gray-400 mt-2">{{ user.position ?? 'Poste non défini' }}</p>
                </div>
                <div>
                    {% if user.status == 'active' %}
                        <span class="px-4 py-2 text-sm font-medium rounded-lg bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300">
                            Actif
                        </span>
                    {% elseif user.status == 'onboarding' %}
                        <span class="px-4 py-2 text-sm font-medium rounded-lg bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300">
                            Onboarding
                        </span>
                    {% elseif user.status == 'invited' %}
                        <span class="px-4 py-2 text-sm font-medium rounded-lg bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300">
                            Invité
                        </span>
                    {% elseif user.status == 'archived' %}
                        <span class="px-4 py-2 text-sm font-medium rounded-lg bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-300">
                            Archivé
                        </span>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            {# Left column - Main info #}
            <div class="lg:col-span-2 space-y-6">
                {# Informations personnelles #}
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                    <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
                        <svg class="w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        Informations personnelles
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Email</label>
                            <p class="text-gray-900 dark:text-white mt-1">{{ user.email }}</p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Téléphone</label>
                            <p class="text-gray-900 dark:text-white mt-1">{{ user.phone ?? 'Non renseigné' }}</p>
                        </div>
                        <div class="md:col-span-2">
                            <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Adresse</label>
                            <p class="text-gray-900 dark:text-white mt-1">{{ user.address ?? 'Non renseignée' }}</p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Situation familiale</label>
                            <p class="text-gray-900 dark:text-white mt-1">{{ user.familyStatus ?? 'Non renseignée' }}</p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Enfants</label>
                            <p class="text-gray-900 dark:text-white mt-1">{{ user.children ?? 0 }}</p>
                        </div>
                    </div>
                </div>

                {# Informations professionnelles #}
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                    <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
                        <svg class="w-6 h-6 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        Informations professionnelles
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Matricule</label>
                            <p class="text-gray-900 dark:text-white mt-1">{{ user.matricule ?? 'Non attribué' }}</p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Date d'embauche</label>
                            <p class="text-gray-900 dark:text-white mt-1">{{ user.hiringDate ? user.hiringDate|date('d/m/Y') : 'Non renseignée' }}</p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Poste</label>
                            <p class="text-gray-900 dark:text-white mt-1">{{ user.position ?? 'Non renseigné' }}</p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Villa</label>
                            <p class="text-gray-900 dark:text-white mt-1">
                                {% if user.villa %}
                                    <span class="inline-flex items-center gap-1.5">
                                        {% if user.villa.color %}
                                            <span class="w-2 h-2 rounded-full" style="background-color: {{ user.villa.color }}"></span>
                                        {% endif %}
                                        {{ user.villa.nom }}
                                    </span>
                                {% else %}
                                    Non renseignée
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </div>

                {# Contrats #}
                {% if activeContract or allContracts|length > 0 %}
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                        <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
                            <svg class="w-6 h-6 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            Contrats
                        </h2>

                        {% if activeContract %}
                            <div class="mb-4 p-4 bg-green-50 dark:bg-green-900/20 rounded-lg border border-green-200 dark:border-green-800">
                                <div class="flex items-center justify-between mb-2">
                                    <span class="text-sm font-medium text-green-800 dark:text-green-300">Contrat actif</span>
                                    <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300">
                                        {{ activeContract.type|upper }}
                                    </span>
                                </div>
                                <div class="text-sm text-green-700 dark:text-green-400">
                                    <p>Du {{ activeContract.startDate|date('d/m/Y') }} {% if activeContract.endDate %}au {{ activeContract.endDate|date('d/m/Y') }}{% endif %}</p>
                                    <p class="mt-1">Poste : {{ activeContract.position }}</p>
                                </div>
                            </div>
                        {% endif %}

                        {% if allContracts|length > 1 %}
                            <div class="mt-4">
                                <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Historique des contrats ({{ allContracts|length }})</h3>
                                <div class="space-y-2">
                                    {% for contract in allContracts %}
                                        {% if contract != activeContract %}
                                            <div class="p-3 bg-gray-50 dark:bg-gray-700 rounded-lg text-sm">
                                                <div class="flex items-center justify-between">
                                                    <span class="font-medium text-gray-900 dark:text-white">{{ contract.type|upper }}</span>
                                                    <span class="text-gray-500 dark:text-gray-400">
                                                        {{ contract.startDate|date('d/m/Y') }} - {{ contract.endDate ? contract.endDate|date('d/m/Y') : 'En cours' }}
                                                    </span>
                                                </div>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                {% endif %}

                {# Documents #}
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                    <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center">
                        <svg class="w-6 h-6 mr-2 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                        </svg>
                        Documents ({{ documents|length }})
                    </h2>
                    {% if documents is empty %}
                        <p class="text-gray-500 dark:text-gray-400 text-center py-8">Aucun document</p>
                    {% else %}
                        <div class="space-y-2">
                            {% for document in documents %}
                                <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                                    <div class="flex items-center">
                                        <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                                        </svg>
                                        <div>
                                            <p class="text-sm font-medium text-gray-900 dark:text-white">{{ document.originalName }}</p>
                                            <p class="text-xs text-gray-500 dark:text-gray-400">{{ document.uploadedAt|date('d/m/Y H:i') }}</p>
                                        </div>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        {% if document.status == 'validated' %}
                                            <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300">
                                                Validé
                                            </span>
                                        {% elseif document.status == 'rejected' %}
                                            <span class="px-2 py-1 text-xs font-medium rounded-full bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300">
                                                Rejeté
                                            </span>
                                        {% else %}
                                            <span class="px-2 py-1 text-xs font-medium rounded-full bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300">
                                                En attente
                                            </span>
                                        {% endif %}
                                        <a href="{{ path('app_documents_download', {id: document.id}) }}" class="text-blue-600 hover:text-blue-800 dark:text-blue-400">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                                            </svg>
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>

            {# Right column - Quick info #}
            <div class="space-y-6">
                {# Quick info card #}
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Informations rapides</h3>
                    <div class="space-y-3">
                        <div>
                            <label class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Rôle</label>
                            <p class="text-sm text-gray-900 dark:text-white mt-1">
                                {% if 'ROLE_ADMIN' in user.roles %}
                                    Administrateur
                                {% elseif 'ROLE_DIRECTOR' in user.roles %}
                                    Directeur
                                {% else %}
                                    Employé
                                {% endif %}
                            </p>
                        </div>
                        <div>
                            <label class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Statut</label>
                            <p class="text-sm text-gray-900 dark:text-white mt-1">{{ user.status }}</p>
                        </div>
                        <div>
                            <label class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Date de création</label>
                            <p class="text-sm text-gray-900 dark:text-white mt-1">{{ user.createdAt|date('d/m/Y') }}</p>
                        </div>
                    </div>
                </div>

                {# Info notice #}
                <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
                    <div class="flex">
                        <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                        </svg>
                        <div>
                            <h4 class="text-sm font-medium text-blue-800 dark:text-blue-300">Vue consultation</h4>
                            <p class="text-xs text-blue-700 dark:text-blue-400 mt-1">
                                Vous consultez ce profil en lecture seule. Pour effectuer des modifications, veuillez contacter un administrateur.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
