{% extends 'layout/dashboard_base.html.twig' %}

{% block title %}Mes fiches de paie{% endblock %}

{% block breadcrumb_items %}
    <li>
        <a href="{{ path('my_payroll_index') }}" class="text-white/60 hover:text-white">Mon espace paie</a>
    </li>
    <li><span class="text-white">Mes fiches de paie</span></li>
{% endblock %}

{% block page_title %}Mes fiches de paie{% endblock %}
{% block page_subtitle %}Téléchargez vos bulletins de salaire{% endblock %}

{% block dashboard_content %}
            {% for year, payslips in payslips_by_year %}
            <div class="bg-white rounded-lg shadow-sm overflow-hidden mb-6">
                <div class="px-6 py-4 border-b bg-gray-50">
                    <h3 class="text-lg font-medium text-gray-900">{{ year }}</h3>
                </div>
                <div class="divide-y divide-gray-200">
                    {% for payslip in payslips %}
                    <div class="px-6 py-4 flex items-center justify-between hover:bg-gray-50">
                        <div class="flex items-center">
                            <svg class="w-10 h-10 text-red-500 mr-4" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"></path>
                            </svg>
                            <div>
                                <p class="text-sm font-medium text-gray-900">{{ payslip.originalName }}</p>
                                <p class="text-xs text-gray-500">
                                    Déposée le {{ payslip.uploadedAt|date('d/m/Y à H:i') }}
                                </p>
                            </div>
                        </div>
                        <a href="{{ path('document_download', {id: payslip.id}) }}"
                           class="inline-flex items-center px-4 py-2 border border-blue-600 text-blue-600 font-medium rounded-lg hover:bg-blue-50 transition">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                            </svg>
                            Télécharger
                        </a>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% else %}
            <div class="bg-white rounded-lg shadow-sm p-12 text-center">
                <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <h3 class="mt-4 text-lg font-medium text-gray-900">Aucune fiche de paie</h3>
                <p class="mt-2 text-sm text-gray-500">
                    Vos bulletins de salaire apparaîtront ici une fois déposés par l'administration.
                </p>
            </div>
            {% endfor %}

{# Information sécurité #}
<div class="mt-6 bg-green-50 rounded-lg p-4">
    <div class="flex">
        <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        <div class="ml-3">
            <h3 class="text-sm font-medium text-green-800">Stockage sécurisé</h3>
            <p class="mt-1 text-sm text-green-700">
                Vos fiches de paie sont stockées de manière sécurisée et accessibles uniquement par vous et les administrateurs autorisés.
            </p>
        </div>
    </div>
</div>
{% endblock %}
