{% extends 'layout/dashboard_base.html.twig' %}

{% block title %}Rapport de paie - {{ consolidation.periodLabel }}{% endblock %}

{% block breadcrumb_items %}
    <li>
        <a href="{{ path('my_payroll_index') }}" class="text-white/60 hover:text-white">Mon espace paie</a>
    </li>
    <li><span class="text-white">{{ consolidation.periodLabel }}</span></li>
{% endblock %}

{% block page_title %}{{ consolidation.periodLabel }}{% endblock %}
{% block page_subtitle %}Validé le {{ consolidation.validatedAt|date('d/m/Y à H:i') }}{% endblock %}

{% block dashboard_content %}
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                {# Colonne principale #}
                <div class="lg:col-span-2 space-y-6">
                    {# Jours travaillés #}
                    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                        <div class="px-6 py-4 border-b bg-blue-50">
                            <h2 class="text-lg font-medium text-blue-900">Jours travaillés</h2>
                        </div>
                        <div class="p-6">
                            <div class="grid grid-cols-3 gap-4 text-center">
                                <div class="bg-gray-50 rounded-lg p-4">
                                    <p class="text-sm text-gray-500">Gardes</p>
                                    <p class="text-2xl font-bold text-gray-900">{{ consolidation.joursTravailes|number_format(2, ',', ' ') }}</p>
                                    <p class="text-xs text-gray-500">jours</p>
                                </div>
                                <div class="bg-gray-50 rounded-lg p-4">
                                    <p class="text-sm text-gray-500">Événements</p>
                                    <p class="text-2xl font-bold text-gray-900">{{ consolidation.joursEvenements|number_format(2, ',', ' ') }}</p>
                                    <p class="text-xs text-gray-500">jours</p>
                                </div>
                                <div class="bg-blue-100 rounded-lg p-4">
                                    <p class="text-sm text-blue-700">Total</p>
                                    <p class="text-2xl font-bold text-blue-900">{{ consolidation.totalJoursTravailes|number_format(2, ',', ' ') }}</p>
                                    <p class="text-xs text-blue-700">jours</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Détail des Gardes #}
                    {% if details.affectations|length > 0 %}
                    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                        <div class="px-6 py-4 border-b border-gray-200">
                            <h3 class="text-lg font-semibold text-gray-900">Détail des Gardes</h3>
                        </div>
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Horaires</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Villa</th>
                                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Jours</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    {% for affectation in details.affectations %}
                                    <tr>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            {{ affectation.start_date }}
                                            {% if affectation.start_date != affectation.end_date %}
                                                → {{ affectation.end_date }}
                                            {% endif %}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            {{ affectation.start_time }} - {{ affectation.end_time }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="px-2 py-1 text-xs rounded-full
                                                {% if affectation.type == 'renfort' %}bg-blue-100 text-blue-800
                                                {% else %}bg-purple-100 text-purple-800{% endif %}">
                                                {{ affectation.type_label }}
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            {{ affectation.villa ?? '-' }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                                            {{ affectation.jours }} j
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                                <tfoot class="bg-gray-50">
                                    <tr>
                                        <td colspan="4" class="px-6 py-3 text-right text-sm font-semibold text-gray-700">
                                            Total Gardes:
                                        </td>
                                        <td class="px-6 py-3 text-center text-sm font-bold text-gray-900">
                                            {{ consolidation.joursTravailes|number_format(2, ',', ' ') }} j
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    {% endif %}

                    {# Détail des Événements (hors garde) #}
                    {% if details.events|length > 0 %}
                    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                        <div class="px-6 py-4 border-b border-gray-200">
                            <h3 class="text-lg font-semibold text-gray-900">Détail des Événements (hors garde)</h3>
                        </div>
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Heure</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Motif</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Durée</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    {% for event in details.events %}
                                    <tr>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            {{ event.date }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            {{ event.time }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">
                                                {{ event.type }}
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 text-sm font-medium">
                                            {{ event.title }}
                                        </td>
                                        <td class="px-6 py-4 text-sm text-gray-500">
                                            {{ event.description|default('-') }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm">
                                            {{ event.duration }} min
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                                <tfoot class="bg-gray-50">
                                    <tr>
                                        <td colspan="5" class="px-6 py-3 text-right text-sm font-semibold text-gray-700">
                                            Total jours événements:
                                        </td>
                                        <td class="px-6 py-3 text-center text-sm font-bold text-gray-900">
                                            {{ consolidation.joursEvenements|number_format(2, ',', ' ') }} j
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    {% endif %}

                    {# Détail des Absences #}
                    {% if details.absences|length > 0 %}
                    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                        <div class="px-6 py-4 border-b border-gray-200">
                            <h3 class="text-lg font-semibold text-gray-900">Détail des Absences</h3>
                        </div>
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date début</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date fin</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Jours ouvrés</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    {% for absence in details.absences %}
                                    <tr>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            {{ absence.start }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                                            {{ absence.end }}
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="px-2 py-1 text-xs rounded-full
                                                {% if absence.type_code == 'CP' %}bg-blue-100 text-blue-800
                                                {% elseif absence.type_code == 'MAL' or absence.type_code == 'MALADIE' %}bg-orange-100 text-orange-800
                                                {% elseif absence.type_code == 'RTT' %}bg-purple-100 text-purple-800
                                                {% else %}bg-gray-100 text-gray-800{% endif %}">
                                                {{ absence.type }}
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                                            {{ absence.days|number_format(2, ',', ' ') }} j
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                                <tfoot class="bg-gray-50">
                                    <tr>
                                        <td colspan="3" class="px-6 py-3 text-right text-sm font-semibold text-gray-700">
                                            Total Absences:
                                        </td>
                                        <td class="px-6 py-3 text-center text-sm font-bold text-gray-900">
                                            {{ consolidation.totalJoursAbsence|number_format(2, ',', ' ') }} j
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    {% endif %}

                    {# Éléments variables #}
                    {% if variables_by_category|length > 0 %}
                    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                        <div class="px-6 py-4 border-b bg-purple-50">
                            <h2 class="text-lg font-medium text-purple-900">Éléments variables</h2>
                        </div>
                        <div class="divide-y divide-gray-200">
                            {% for category, data in variables_by_category %}
                            <div class="p-6">
                                <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-3">{{ data.label }}</h3>
                                <div class="space-y-2">
                                    {% for item in data.items %}
                                    <div class="flex items-center justify-between py-1">
                                        <div>
                                            <span class="text-gray-900">{{ item.label }}</span>
                                            {% if item.description %}
                                            <span class="text-gray-500 text-sm"> - {{ item.description }}</span>
                                            {% endif %}
                                        </div>
                                        <span class="font-medium {% if item.amount < 0 %}text-red-600{% else %}text-gray-900{% endif %}">
                                            {{ item.amount|number_format(2, ',', ' ') }} €
                                        </span>
                                    </div>
                                    {% endfor %}
                                </div>
                                <div class="mt-3 pt-3 border-t flex justify-between items-center">
                                    <span class="text-sm text-gray-500">Sous-total {{ data.label|lower }}</span>
                                    <span class="font-medium {% if data.total < 0 %}text-red-600{% else %}text-purple-600{% endif %}">
                                        {{ data.total|number_format(2, ',', ' ') }} €
                                    </span>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                        <div class="px-6 py-4 bg-purple-50 flex justify-between items-center">
                            <span class="font-medium text-purple-900">Total éléments variables</span>
                            <span class="text-xl font-bold text-purple-600">{{ consolidation.totalVariables|number_format(2, ',', ' ') }} €</span>
                        </div>
                    </div>
                    {% endif %}
                </div>

                {# Colonne latérale #}
                <div class="space-y-6">
                    {# Congés payés #}
                    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
                        <div class="px-6 py-4 border-b bg-green-50">
                            <h2 class="text-lg font-medium text-green-900">Congés payés</h2>
                        </div>
                        <div class="p-6 space-y-4">
                            <div class="flex justify-between items-center">
                                <span class="text-gray-500">Solde début de mois</span>
                                <span class="font-medium text-gray-900">{{ consolidation.cpSoldeDebut|number_format(2, ',', ' ') }} j</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-green-600">+ Acquis ce mois</span>
                                <span class="font-medium text-green-600">{{ consolidation.cpAcquis|number_format(2, ',', ' ') }} j</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-red-600">- Pris ce mois</span>
                                <span class="font-medium text-red-600">{{ consolidation.cpPris|number_format(2, ',', ' ') }} j</span>
                            </div>
                            <div class="pt-4 border-t flex justify-between items-center">
                                <span class="font-medium text-gray-900">Solde fin de mois</span>
                                <span class="text-xl font-bold {% if consolidation.cpSoldeFin >= 10 %}text-green-600{% elseif consolidation.cpSoldeFin >= 5 %}text-yellow-600{% else %}text-red-600{% endif %}">
                                    {{ consolidation.cpSoldeFin|number_format(2, ',', ' ') }} j
                                </span>
                            </div>
                        </div>
                    </div>

                    {# Récapitulatif #}
                    <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-lg shadow-sm p-6 text-white">
                        <h2 class="text-lg font-medium mb-4">Récapitulatif</h2>
                        <div class="space-y-3">
                            <div class="flex justify-between items-center">
                                <span class="text-gray-300">Jours travaillés</span>
                                <span class="font-medium">{{ consolidation.totalJoursTravailes|number_format(2, ',', ' ') }} j</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-gray-300">Jours d'absence</span>
                                <span class="font-medium">{{ consolidation.totalJoursAbsence|number_format(2, ',', ' ') }} j</span>
                            </div>
                            {% if consolidation.totalVariables != 0 %}
                            <div class="flex justify-between items-center pt-3 border-t border-gray-700">
                                <span class="text-gray-300">Variables</span>
                                <span class="font-medium {% if consolidation.totalVariables < 0 %}text-red-400{% else %}text-green-400{% endif %}">
                                    {{ consolidation.totalVariables|number_format(2, ',', ' ') }} €
                                </span>
                            </div>
                            {% endif %}
                        </div>
                    </div>

                {# Information #}
                <div class="bg-blue-50 rounded-lg p-4">
                    <div class="flex">
                        <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                        </svg>
                        <div class="ml-3">
                            <p class="text-sm text-blue-700">
                                Si vous constatez une erreur dans ce rapport, contactez l'administration RH.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
