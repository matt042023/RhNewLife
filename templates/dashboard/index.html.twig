{% extends 'base.html.twig' %}

{% block title %}Dashboard - RH NewLife{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 p-8">
    <div class="max-w-7xl mx-auto">

        {# Header #}
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">
                Bienvenue, {{ user.firstName }} {{ user.lastName }} !
            </h1>
            <p class="text-gray-600 mt-2">
                Voici votre tableau de bord RH
            </p>
        </div>

        {# Flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'error' : (label == 'success' ? 'success' : 'info') }} mb-4">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {# Quick Stats #}
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="card">
                <div class="card-header">
                    <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                    </div>
                    <div>
                        <h3 class="card-title">Profil</h3>
                        <p class="text-sm text-gray-500">{{ user.status|capitalize }}</p>
                    </div>
                </div>
                <div class="card-body">
                    <p><strong>Email :</strong> {{ user.email }}</p>
                    <p><strong>Poste :</strong> {{ user.position ?? 'Non dÃ©fini' }}</p>
                    {% if user.villa %}
                    <p><strong>Villa :</strong> {{ user.villa.nom }}</p>
                    {% endif %}
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                    </div>
                    <div>
                        <h3 class="card-title">Documents</h3>
                        <p class="text-sm text-gray-500">Vos justificatifs</p>
                    </div>
                </div>
                <div class="card-body">
                    <a href="{{ path('app_profile_documents') }}" class="btn btn-secondary btn-sm mt-2">
                        GÃ©rer mes documents
