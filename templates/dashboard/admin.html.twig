{% extends 'layout/dashboard_base.html.twig' %}

{% block title %}Administration RH - RH NewLife
{% endblock %}

{% block breadcrumb_items %}
	<li aria-current="page">
		<div class="flex items-center">
			<svg class="w-6 h-6 text-gray-400" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
				<path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
			</svg>
			<span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 dark:text-gray-400">Administration RH</span>
		</div>
	</li>
{% endblock %}

{% block page_header %}
	<div class="px-4 py-8 lg:px-6">
		<div class="flex flex-col md:flex-row md:items-center md:justify-between">
			<div class="flex-1 min-w-0">
				<h1 class="text-2xl md:text-3xl font-bold text-white mb-2">
					Administration RH ⚙️
				</h1>
				<p class="text-blue-100 text-sm md:text-base">
					{{ "now"|date("l d F Y") }}
					• Pilotage global des ressources humaines
				</p>
			</div>
			<div class="mt-4 md:mt-0 md:ml-4 flex gap-2 flex-shrink-0">
				<a href="" class="glass-btn glass-btn-success inline-flex items-center">
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
					</svg>
					Inviter un salarié
				</a>
				<a href="" class="glass-btn inline-flex items-center bg-white/90 dark:bg-white/10 text-blue-600 dark:text-blue-400 hover:bg-white dark:hover:bg-white/20">
					<svg class="w-4 h-4" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
						<path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"></path>
					</svg>
					Gérer les salariés
				</a>
			</div>
		</div>

		{# Quick stats with glass effect #}
		<div class="mt-6 grid grid-cols-2 md:grid-cols-5 gap-4 stagger-children">
			<div class="glass-card bg-white/20 dark:bg-white/10 backdrop-blur-md p-4 border border-white/30 hover:scale-105 transition-transform">
				<div class="text-white/90 text-xs font-semibold mb-1 uppercase tracking-wide">Salariés actifs</div>
				<div class="text-white text-3xl font-bold mb-1">42</div>
				<div class="flex items-center gap-1 text-white/80 text-xs">
					<svg class="w-3 h-3 text-green-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
					</svg>
					<span class="font-medium">+2 ce mois</span>
				</div>
			</div>
			<div class="glass-card bg-white/20 dark:bg-white/10 backdrop-blur-md p-4 border border-white/30 hover:scale-105 transition-transform">
				<div class="text-white/90 text-xs font-semibold mb-1 uppercase tracking-wide">En onboarding</div>
				<div class="text-white text-3xl font-bold mb-1">3</div>
				<div class="text-white/80 text-xs font-medium">À finaliser</div>
			</div>
			<div class="glass-card bg-white/20 dark:bg-white/10 backdrop-blur-md p-4 border border-white/30 hover:scale-105 transition-transform">
				<div class="text-white/90 text-xs font-semibold mb-1 uppercase tracking-wide">Documents</div>
				<div class="text-white text-3xl font-bold mb-1">5</div>
				<div class="text-orange-200 text-xs font-medium">À traiter</div>
			</div>
			<div class="glass-card bg-white/20 dark:bg-white/10 backdrop-blur-md p-4 border border-white/30 hover:scale-105 transition-transform">
				<div class="text-white/90 text-xs font-semibold mb-1 uppercase tracking-wide">Absences</div>
				<div class="text-white text-3xl font-bold mb-1">7</div>
				<div class="text-yellow-200 text-xs font-medium">En attente</div>
			</div>
			<div class="glass-card bg-white/20 dark:bg-white/10 backdrop-blur-md p-4 border border-white/30 hover:scale-105 transition-transform">
				<div class="text-white/90 text-xs font-semibold mb-1 uppercase tracking-wide">Alertes</div>
				<div class="text-white text-3xl font-bold mb-1">4</div>
				<div class="text-red-200 text-xs font-medium">Dont 2 critiques</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block dashboard_content %}
	<div
		class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
		{# Widget 1: Salariés actifs #}
		{% embed 'components/widgets/_widget_card.html.twig' with {
            'title': 'Salariés actifs',
            'icon': '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"></path></svg>',
            'icon_color': 'bg-blue-100 text-blue-600 dark:bg-blue-900 dark:text-blue-300',
            'badge': '42 actifs',
            'badge_color': 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300',
            'actions': [
                {'label': 'Gérer les salariés', 'url': path('app_admin_users_list'), 'type': 'primary'}
            ]
        } %}
			{% block widget_content %}
				<div class="space-y-3">
					<div class="grid grid-cols-2 gap-3">
						<div class="text-center p-3 glass-card glass-card-success rounded-lg">
							<div class="text-2xl font-bold text-green-600 dark:text-green-400">35</div>
							<div class="text-xs text-green-700 dark:text-green-300 mt-1 font-medium">CDI</div>
						</div>
						<div class="text-center p-3 glass-card glass-card-primary rounded-lg">
							<div class="text-2xl font-bold text-blue-600 dark:text-blue-400">7</div>
							<div class="text-xs text-blue-700 dark:text-blue-300 mt-1 font-medium">CDD/Stage</div>
						</div>
					</div>
					<div class="text-sm text-gray-600 dark:text-gray-400 space-y-2 border-t border-white/10 pt-3">
						<div class="flex items-center justify-between p-2 rounded hover:bg-white/10 dark:hover:bg-white/5 transition-colors">
							<span>Nouvelles embauches (mois)</span>
							<span class="glass-badge glass-badge-success">+2</span>
						</div>
						<div class="flex items-center justify-between p-2 rounded hover:bg-white/10 dark:hover:bg-white/5 transition-colors">
							<span>En période d'essai</span>
							<span class="glass-badge glass-badge-info">4</span>
						</div>
						<div class="flex items-center justify-between p-2 rounded hover:bg-white/10 dark:hover:bg-white/5 transition-colors">
							<span>Fin de contrat (3 mois)</span>
							<span class="glass-badge glass-badge-warning">2</span>
						</div>
					</div>
				</div>
			{% endblock %}
		{% endembed %}

		{# Widget 2: Planning du jour #}
