{% extends 'layout/dashboard_base.html.twig' %}

{% block title %}Administration RH - RH NewLife
{% endblock %}

{% block breadcrumb_items %}
	<li aria-current="page">
		<div class="flex items-center">
			<svg class="w-6 h-6 text-gray-400" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
				<path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
			</svg>
			<span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 dark:text-gray-400">Administration RH</span>
		</div>
	</li>
{% endblock %}

{% block page_header %}
	<div class="px-4 py-8 lg:px-6">
		<div class="flex flex-col md:flex-row md:items-center md:justify-between">
			<div class="flex-1 min-w-0">
				<h1 class="text-2xl md:text-3xl font-bold text-white mb-2">
					Administration RH ⚙️
				</h1>
				<p class="text-blue-100 text-sm md:text-base">
					{{ "now"|date("l d F Y") }}
					• Pilotage global des ressources humaines
				</p>
			</div>
			<div class="mt-4 md:mt-0 md:ml-4 flex gap-2 flex-shrink-0">
				<a href="" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-green-600 hover:bg-green-700 rounded-lg focus:ring-4 focus:ring-green-300">
					<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
					</svg>
					Inviter un salarié
				</a>
				<a href="" class="inline-flex items-center px-4 py-2 text-sm font-medium text-blue-600 bg-white rounded-lg hover:bg-gray-50 focus:ring-4 focus:ring-blue-300">
					<svg class="w-4 h-4 mr-2" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
						<path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"></path>
					</svg>
					Gérer les salariés
				</a>
			</div>
		</div>

		{# Quick stats #}
		<div class="mt-6 grid grid-cols-2 md:grid-cols-5 gap-4">
			<div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
				<div class="text-white/80 text-xs font-medium mb-1">Salariés actifs</div>
				<div class="text-white text-2xl font-bold">42</div>
				<div class="text-white/60 text-xs mt-1">+2 ce mois</div>
			</div>
			<div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
				<div class="text-white/80 text-xs font-medium mb-1">En onboarding</div>
				<div class="text-white text-2xl font-bold">3</div>
				<div class="text-white/60 text-xs mt-1">À finaliser</div>
			</div>
			<div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
