{% extends 'layout/dashboard_base.html.twig' %}

{% block title %}{{ message.sujet }} | RH NewLife{% endblock %}

{% block page_header %}
    <div class="px-4 py-6 lg:px-6">
        <div class="flex items-center justify-between">
            <div>
                <nav class="flex items-center space-x-2 text-emerald-200 text-sm mb-2">
                    <a href="{{ path('app_message_index') }}" class="hover:text-white transition-colors">
                        Mes messages
                    </a>
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-white">Message</span>
                </nav>
                <h1 class="text-2xl font-bold text-white">{{ message.sujet }}</h1>
            </div>
            <a href="{{ path('app_message_index') }}" class="glass-btn glass-btn-ghost text-white border-white/30 hover:bg-white/20">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Retour
            </a>
        </div>
    </div>
{% endblock %}

{% block dashboard_content %}

    {# Message content #}
    <div class="glass-card p-6">
        {# Sender info #}
        <div class="flex items-start space-x-4 mb-6 pb-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex-shrink-0 w-12 h-12 rounded-full bg-gradient-to-br from-emerald-400 to-teal-500 flex items-center justify-center text-white font-bold text-lg">
                {{ message.expediteur.firstName|slice(0,1)|upper }}{{ message.expediteur.lastName|slice(0,1)|upper }}
            </div>
            <div class="flex-grow">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="font-semibold text-gray-900 dark:text-white">
                            {{ message.expediteur.fullName }}
                        </h3>
                        <p class="text-sm text-gray-500 dark:text-gray-400">
                            {{ message.expediteur.email }}
                        </p>
                    </div>
                    <span class="text-sm text-gray-500 dark:text-gray-400">
                        {{ message.dateEnvoi|date('d/m/Y a H:i') }}
                    </span>
                </div>

                {# Recipients #}
                <div class="mt-2 flex flex-wrap items-center gap-2">
                    <span class="text-xs text-gray-500 dark:text-gray-400">A:</span>
                    {% for dest in message.destinataires %}
                        <span class="glass-badge glass-badge-secondary text-xs">
                            {{ dest.fullName }}
                        </span>
                    {% endfor %}
                    {% if message.rolesCible %}
                        {% for role in message.rolesCible %}
                            <span class="glass-badge glass-badge-info text-xs">
                                {% if role == 'ROLE_USER' %}Tous les utilisateurs
                                {% elseif role == 'ROLE_ADMIN' %}Administrateurs
                                {% elseif role == 'ROLE_DIRECTOR' %}Direction
                                {% else %}{{ role }}{% endif %}
                            </span>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>

        {# Message body #}
        <div class="prose prose-emerald dark:prose-invert max-w-none">
            <div class="whitespace-pre-wrap text-gray-700 dark:text-gray-300">{{ message.contenu }}</div>
        </div>

        {# Attachments #}
        {% if message.piecesJointes and message.piecesJointes|length > 0 %}
            <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
                <h4 class="text-sm font-medium text-gray-900 dark:text-white mb-3">
                    Pieces jointes ({{ message.piecesJointes|length }})
                </h4>
                <div class="flex flex-wrap gap-2">
                    {% for attachment in message.piecesJointes %}
                        <span class="glass-badge glass-badge-secondary">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"/>
                            </svg>
                            {{ attachment }}
                        </span>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
