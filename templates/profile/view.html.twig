{% extends 'layout/dashboard_base.html.twig' %}

{% block title %}Mon profil - RH NewLife{% endblock %}

{% block breadcrumb_items %}
	<li aria-current="page">
		<div class="flex items-center">
			<svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
				<path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
			</svg>
			<span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 dark:text-gray-400">Mon profil</span>
		</div>
	</li>
{% endblock %}

{% block page_header %}
	<div class="px-4 py-6 lg:px-6">
		<div class="flex flex-col md:flex-row md:items-start md:justify-between">
			<div class="flex items-center gap-4">
				<div class="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center text-white text-2xl font-bold border-2 border-white/30">
					{{ user.firstName|first }}{{ user.lastName|first }}
				</div>
				<div>
					<h1 class="text-2xl md:text-3xl font-bold text-white mb-1">Mon profil</h1>
					<div class="flex items-center gap-3">
						<span class="text-blue-100 text-sm">{{ user.fullName }}</span>
						<span class="text-blue-200">•</span>
						<span class="font-mono text-sm text-blue-100">{{ user.matricule }}</span>
					</div>
				</div>
			</div>

			<div class="mt-4 md:mt-0 md:ml-4">
				<a href="{{ path('app_profile_edit_request') }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-blue-600 bg-white hover:bg-gray-50 rounded-lg transition focus:ring-4 focus:ring-blue-300">
					<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
					</svg>
					Modifier mon profil
				</a>
			</div>
		</div>

		{# Progression #}
		<div class="mt-6 bg-white/10 backdrop-blur-sm rounded-lg p-4">
			<div class="flex items-center justify-between mb-2">
				<span class="text-sm font-semibold text-white/90">Complétude du dossier</span>
				<span class="text-sm font-bold text-white">{{ completionStatus.percentage }}%</span>
			</div>
			<div class="w-full bg-white/20 rounded-full h-2">
				<div class="bg-gradient-to-r from-green-400 to-blue-400 h-2 rounded-full transition-all" style="width: {{ completionStatus.percentage }}%"></div>
			</div>
		</div>
	</div>
{% endblock %}

{% block dashboard_content %}
	{# Alerte si dossier incomplet #}
	{% if not completionStatus.isComplete %}
		<div class="mb-4 p-4 rounded-lg bg-yellow-50 text-yellow-800 dark:bg-gray-800 dark:text-yellow-400" role="alert">
			<div class="flex items-start gap-3">
				<svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
				</svg>
				<div class="flex-1">
					<p class="font-semibold">Complétez votre profil ({{ completionStatus.percentage }}%)</p>
					{% if completionStatus.missingFields is not empty %}
						<p class="text-sm mt-1">Informations manquantes : {{ completionStatus.missingFields|join(', ') }}</p>
					{% endif %}
					{% if completionStatus.missingDocuments is not empty %}
						<p class="text-sm mt-1">Documents manquants : {{ completionStatus.missingDocuments|join(', ') }}</p>
					{% endif %}
					<a href="{{ path('app_profile_edit_request') }}" class="text-sm font-semibold underline mt-2 inline-block hover:text-yellow-900 dark:hover:text-yellow-300">
						Demander une modification →
					</a>
				</div>
			</div>
		</div>
	{% endif %}

	{# Navigation rapide #}
	<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
		<a href="{{ path('app_profile_edit_request') }}" class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-6 hover:shadow-md transition text-center">
			<svg class="w-12 h-12 text-blue-600 dark:text-blue-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
			</svg>
			<h3 class="font-bold text-gray-900 dark:text-white">Modifier mon profil</h3>
			<p class="text-sm text-gray-600 dark:text-gray-400 mt-1">Demander des changements</p>
		</a>

		<a href="{{ path('app_profile_documents') }}" class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-6 hover:shadow-md transition text-center">
			<svg class="w-12 h-12 text-green-600 dark:text-green-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
			</svg>
			<h3 class="font-bold text-gray-900 dark:text-white">Mes documents</h3>
			<p class="text-sm text-gray-600 dark:text-gray-400 mt-1">Consulter et télécharger</p>
		</a>

		<a href="{{ path('app_profile_contract') }}" class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-6 hover:shadow-md transition text-center">
			<svg class="w-12 h-12 text-purple-600 dark:text-purple-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
			</svg>
			<h3 class="font-bold text-gray-900 dark:text-white">Mon contrat</h3>
			<p class="text-sm text-gray-600 dark:text-gray-400 mt-1">Voir les détails</p>
		</a>
	</div>

	{# Informations personnelles #}
	<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
		<div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-6">
			<h2 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
				<svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
				</svg>
				Informations personnelles
			</h2>
			<dl class="space-y-3">
				<div>
					<dt class="text-sm text-gray-500 dark:text-gray-400">Email</dt>
					<dd class="text-gray-900 dark:text-white">{{ user.email }}</dd>
				</div>
				<div>
					<dt class="text-sm text-gray-500 dark:text-gray-400">Téléphone</dt>
					<dd class="text-gray-900 dark:text-white">{{ user.phone ?? '-' }}</dd>
				</div>
				<div>
					<dt class="text-sm text-gray-500 dark:text-gray-400">Adresse</dt>
					<dd class="text-gray-900 dark:text-white">{{ user.address ?? '-' }}</dd>
				</div>
				<div>
					<dt class="text-sm text-gray-500 dark:text-gray-400">Situation familiale</dt>
					<dd class="text-gray-900 dark:text-white">{{ user.familyStatus ?? '-' }}</dd>
				</div>
				<div>
					<dt class="text-sm text-gray-500 dark:text-gray-400">Enfants</dt>
					<dd class="text-gray-900 dark:text-white">{{ user.children ?? 0 }}</dd>
				</div>
			</dl>
		</div>

		<div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-6">
			<h2 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
				<svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
				</svg>
				Informations professionnelles
			</h2>
			<dl class="space-y-3">
				<div>
					<dt class="text-sm text-gray-500 dark:text-gray-400">Poste</dt>
					<dd class="text-gray-900 dark:text-white">{{ user.position ?? '-' }}</dd>
				</div>
				<div>
					<dt class="text-sm text-gray-500 dark:text-gray-400">Structure</dt>
					<dd class="text-gray-900 dark:text-white">{{ user.structure ?? '-' }}</dd>
				</div>
				<div>
					<dt class="text-sm text-gray-500 dark:text-gray-400">Date d'embauche</dt>
					<dd class="text-gray-900 dark:text-white">{{ user.hiringDate ? user.hiringDate|date('d/m/Y') : '-' }}</dd>
				</div>
				<div>
					<dt class="text-sm text-gray-500 dark:text-gray-400">Matricule</dt>
					<dd class="font-mono text-gray-900 dark:text-white">{{ user.matricule ?? '-' }}</dd>
				</div>
			</dl>
		</div>
	</div>

	{# Contrat actif #}
	{% if activeContract %}
		<div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-6">
			<div class="flex items-center justify-between mb-4">
				<h2 class="text-lg font-bold text-gray-900 dark:text-white flex items-center gap-2">
					<svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
					</svg>
					Contrat actuel
				</h2>
				<span class="badge badge-success">{{ activeContract.type }}</span>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
				<div>
					<dt class="text-sm text-gray-500 dark:text-gray-400">Période</dt>
					<dd class="text-gray-900 dark:text-white mt-1">
						Du {{ activeContract.startDate|date('d/m/Y') }}
						{% if activeContract.endDate %}
							au {{ activeContract.endDate|date('d/m/Y') }}
						{% endif %}
					</dd>
				</div>
				<div>
					<dt class="text-sm text-gray-500 dark:text-gray-400">Salaire brut</dt>
					<dd class="text-gray-900 dark:text-white font-bold mt-1">{{ activeContract.baseSalary }} €</dd>
				</div>
				<div>
					<dt class="text-sm text-gray-500 dark:text-gray-400">Heures/semaine</dt>
					<dd class="text-gray-900 dark:text-white mt-1">{{ activeContract.weeklyHours }}h</dd>
				</div>
			</div>
		</div>
	{% endif %}
{% endblock %}
