{% extends 'base.html.twig' %}

{% block title %}Mes documents - RH NewLife{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-10 px-4">
    <div class="max-w-6xl mx-auto space-y-8">
        <header>
            <h1 class="text-3xl font-bold text-gray-900">Mes documents</h1>
            <p class="text-gray-600 mt-1">Téléversez, remplacez ou téléchargez vos documents personnels.</p>
        </header>

        {% set completionPercent = completion.percentage ?? 0 %}
        <section class="bg-white shadow-sm rounded-2xl p-6">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <p class="text-sm font-medium text-gray-600 uppercase tracking-wide">Progression globale</p>
                    <p class="text-2xl font-semibold text-gray-900">{{ completionPercent }}%</p>
                </div>
                <div class="text-sm text-gray-500">
                    {{ completion.completed_required ?? 0 }}/{{ completion.total_required ?? 0 }} documents requis complétés
                </div>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
                <div class="bg-blue-600 h-3 rounded-full transition-all duration-500" style="width: {{ completionPercent }}%"></div>
            </div>
            {% if missingDocuments is not empty %}
                <div class="mt-4 border border-yellow-300 bg-yellow-50 text-yellow-900 rounded-xl p-4">
                    <p class="font-medium">Documents à fournir en priorité :</p>
                    <ul class="list-disc list-inside text-sm mt-2 space-y-1">
                        {% for item in missingDocuments %}
                            <li>{{ item.label }} (catégorie : {{ item.category }}{% if item.priority %}, priorité : {{ item.priority }}{% endif %})</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
        </section>

        {% for category in categories %}
            {% set requiredTotal = category.completion.required_total ?? 0 %}
            {% set requiredDone = category.completion.required_completed ?? 0 %}
            {% set categoryPercent = category.completion.percentage ?? (requiredTotal ? (requiredDone / requiredTotal * 100)|round(1) : 100) %}
            <section class="bg-white shadow-sm rounded-2xl p-6">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-4">
                    <div>
                        <h2 class="text-xl font-semibold text-gray-900">{{ category.label }}</h2>
                        <p class="text-sm text-gray-500">{{ requiredDone }}/{{ requiredTotal }} documents requis</p>
                    </div>
                    <div class="w-full md:w-64">
                        <div class="flex items-center justify-between text-xs text-gray-500 mb-1">
                            <span>Progression</span>
                            <span>{{ categoryPercent }}%</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-2 overflow-hidden">
                            <div class="bg-emerald-500 h-2 rounded-full transition-all duration-500" style="width: {{ categoryPercent }}%"></div>
                        </div>
                    </div>
                </div>

                <div class="grid gap-6">
                    <div>
                        <h3 class="text-sm font-medium text-gray-600 uppercase tracking-wide mb-2">Documents requis</h3>
                        <div class="space-y-3">
                            {% for item in category.required %}
                                {% set docs = documentsByType[item.type] ?? [] %}
                                <article class="flex flex-col md:flex-row md:items-center md:justify-between gap-3 border border-gray-200 rounded-xl p-4">
                                    <div class="flex items-start gap-3">
                                        <div class="w-10 h-10 rounded-lg flex items-center justify-center {{ item.uploaded ? 'bg-emerald-100 text-emerald-600' : 'bg-gray-100 text-gray-400' }}">
                                            {% if item.uploaded %}
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                                            {% else %}
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
                                            {% endif %}
                                        </div>
                                        <div>
                                            <p class="font-semibold text-gray-900">{{ item.label }}</p>
                                            <p class="text-sm text-gray-500">Priorité : {{ item.priority|default('standard') }}</p>
                                            {% if item.uploaded %}
                                                {% for doc in docs %}
                                                    <p class="text-xs text-gray-400 mt-1">Téléversé le {{ doc.uploadedAt ? doc.uploadedAt|date('d/m/Y H:i') : 'N/A' }}</p>
                                                {% endfor %}
                                            {% else %}
                                                <p class="text-xs text-amber-600 mt-1">Document manquant</p>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="flex items-center gap-2 self-end md:self-center">
                                        {% if item.uploaded %}
                                            {% for doc in docs %}
                                                <a href="{{ path('app_profile_documents_download', {id: doc.id}) }}" class="btn btn-secondary btn-sm">Télécharger</a>
                                                {% if is_granted('DOCUMENT_REPLACE', doc) %}
                                                    <button type="button" class="btn btn-outline btn-sm disabled" disabled>Remplacer (à venir)</button>
                                                {% endif %}
                                                {% if is_granted('DOCUMENT_DELETE', doc) %}
                                                    <button type="button" class="btn btn-outline-danger btn-sm disabled" disabled>Supprimer (à venir)</button>
                                                {% endif %}
                                            {% endfor %}
                                        {% else %}
                                            <button type="button" class="btn btn-primary btn-sm disabled" disabled>Ajouter (à venir)</button>
                                        {% endif %}
                                    </div>
                                </article>
                            {% endfor %}
                        </div>
                    </div>

                    {% if category.optional is not empty %}
                        <div>
                            <h3 class="text-sm font-medium text-gray-600 uppercase tracking-wide mb-2">Documents optionnels</h3>
                            <div class="space-y-3">
                                {% for item in category.optional %}
                                    {% set docs = documentsByType[item.type] ?? [] %}
                                    <article class="flex flex-col md:flex-row md:items-center md:justify-between gap-3 border border-dashed border-gray-200 rounded-xl p-4 bg-gray-50">
                                        <div>
                                            <p class="font-semibold text-gray-800">{{ item.label }}</p>
                                            <p class="text-xs text-gray-500">Priorité : {{ item.priority|default('basse') }}</p>
                                            {% if item.uploaded %}
                                                {% for doc in docs %}
                                                    <p class="text-xs text-gray-400 mt-1">Téléversé le {{ doc.uploadedAt ? doc.uploadedAt|date('d/m/Y H:i') : 'N/A' }}</p>
                                                {% endfor %}
                                            {% else %}
                                                <p class="text-xs text-gray-400 mt-1">Document optionnel non fourni</p>
                                            {% endif %}
                                        </div>
                                        <div class="flex items-center gap-2 self-end md:self-center">
                                            {% if item.uploaded %}
                                                {% for doc in docs %}
                                                    <a href="{{ path('app_profile_documents_download', {id: doc.id}) }}" class="btn btn-secondary btn-sm">Télécharger</a>
                                                {% endfor %}
                                            {% else %}
                                                <button type="button" class="btn btn-outline btn-sm disabled" disabled>Ajouter (à venir)</button>
                                            {% endif %}
                                        </div>
                                    </article>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </section>
        {% endfor %}

        <footer class="text-sm text-gray-500">
            <p>Les actions d’upload/remplacement seront activées lors de la mise en place de l’interface dynamique (phase 7+).</p>
            <p class="mt-1">Besoin d’aide ? Contactez le service RH : <a class="underline font-medium" href="mailto:rh@newlife.com">rh@newlife.com</a></p>
        </footer>
    </div>
</div>
{% endblock %}
