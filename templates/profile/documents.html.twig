{# JavaScript for modals and file handling - Will be migrated to Stimulus in Phase 9 #}
<script>
    // Upload Modal
    function openUploadModal(type = '', label = '') {
        const modal = document.getElementById('uploadModal');
        const typeSelect = document.getElementById('uploadType');

        if (type && typeSelect) {
            typeSelect.value = type;
        }

        modal.classList.remove('hidden');
    }

    function closeUploadModal() {
        document.getElementById('uploadModal').classList.add('hidden');
        document.getElementById('uploadForm').reset();
        clearUploadFile();
    }

    // File upload handling
    const uploadFileInput = document.getElementById('uploadFileInput');
    const uploadDropZone = document.getElementById('uploadDropZone');
    const uploadDropContent = document.getElementById('uploadDropContent');
    const uploadFilePreview = document.getElementById('uploadFilePreview');

    uploadFileInput?.addEventListener('change', handleUploadFile);

    function handleUploadFile() {
        const file = uploadFileInput.files[0];
        if (!file) return;

        // Validate size (10MB)
        if (file.size > 10 * 1024 * 1024) {
            alert('Le fichier est trop volumineux. Taille maximale : 10 MB');
            clearUploadFile();
            return;
        }

        // Show preview
        uploadDropContent.classList.add('hidden');
        uploadFilePreview.classList.remove('hidden');
        document.getElementById('uploadFileName').textContent = file.name;
        document.getElementById('uploadFileSize').textContent = formatFileSize(file.size);
    }

    function clearUploadFile() {
        uploadFileInput.value = '';
        uploadDropContent.classList.remove('hidden');
        uploadFilePreview.classList.add('hidden');
    }

    // Replace Modal
    function replaceDocument(documentId, documentName) {
        const modal = document.getElementById('replaceModal');
        const form = document.getElementById('replaceForm');
        form.action = `/profile/documents/${documentId}/replace`;
        modal.classList.remove('hidden');
    }

    function closeReplaceModal() {
        document.getElementById('replaceModal').classList.add('hidden');
        document.getElementById('replaceForm').reset();
    }

    // Delete Modal
    function deleteDocument(documentId, documentName) {
        const modal = document.getElementById('deleteModal');
        const form = document.getElementById('deleteForm');
        const nameSpan = document.getElementById('deleteDocumentName');

        form.action = `/profile/documents/${documentId}`;
        form.method = 'POST';

        // Add method override for DELETE
        let methodInput = form.querySelector('input[name="_method"]');
        if (!methodInput) {
            methodInput = document.createElement('input');
            methodInput.type = 'hidden';
            methodInput.name = '_method';
            form.appendChild(methodInput);
        }
        methodInput.value = 'DELETE';

        nameSpan.textContent = documentName;
        modal.classList.remove('hidden');
    }

    function closeDeleteModal() {
        document.getElementById('deleteModal').classList.add('hidden');
    }

    // View Modal
    function viewDocument(documentId) {
        const modal = document.getElementById('viewModal');
        const content = document.getElementById('viewModalContent');

        modal.classList.remove('hidden');

        // Load document content via AJAX (to be implemented in Phase 9)
        fetch(`/profile/documents/${documentId}`)
            .then(response => response.text())
            .then(html => {
                content.innerHTML = html;
            })
            .catch(error => {
                content.innerHTML = `
                    <div class="text-center text-red-600">
                        <svg class="w-12 h-12 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <p>Erreur lors du chargement du document</p>
                    </div>
                `;
            });
    }

    function closeViewModal() {
        document.getElementById('viewModal').classList.add('hidden');
    }

    // Utility function
    function formatFileSize(bytes) {
        if (bytes === 0) return '0 Bytes';
        const k = 1024;
        const sizes = ['Bytes', 'KB', 'MB', 'GB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
    }

    // Close modals on ESC key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeUploadModal();
            closeReplaceModal();
            closeDeleteModal();
            closeViewModal();
        }
    });

    // Close modals on backdrop click
    document.querySelectorAll('[id$="Modal"]').forEach(modal => {
        modal.addEventListener('click', function(e) {
            if (e.target === this) {
                this.classList.add('hidden');
            }
        });
    });
</script>
