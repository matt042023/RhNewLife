{% extends 'layout/dashboard_base.html.twig' %}

{% block title %}Mes documents - RH NewLife{% endblock %}

{% block page_header %}
    <div class="px-4 py-6 lg:px-6">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between">
            <div class="flex-1 min-w-0">
                <h1 class="text-2xl md:text-3xl font-bold text-white mb-1">
                    Mes documents
                </h1>
                <p class="text-blue-100 text-sm md:text-base">
                    Gérez vos documents personnels en toute simplicité
                </p>
            </div>
            <div class="mt-4 md:mt-0 md:ml-4 flex-shrink-0">
                <button type="button" onclick="openUploadModal()"
                        class="inline-flex items-center px-4 py-2 bg-white text-blue-600 hover:bg-blue-50 rounded-lg font-medium transition-colors">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Ajouter un document
                </button>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_content %}
<div class="max-w-7xl mx-auto space-y-6">
    {% set completionPercent = completion.percentage ?? 0 %}
    {# Global Completion Card #}
    <section class="bg-white dark:bg-gray-800 shadow-sm rounded-lg p-6">
        <div class="flex items-center justify-between mb-4">
            <div>
                <p class="text-sm font-medium text-gray-600 dark:text-gray-400 uppercase tracking-wide">Progression globale</p>
                <p class="text-3xl font-bold text-gray-900 dark:text-white mt-1">{{ completionPercent }}%</p>
            </div>
            <div class="text-right">
                <p class="text-sm text-gray-500 dark:text-gray-400">
                    {{ completion.completed_required ?? 0 }}/{{ completion.total_required ?? 0 }}
                </p>
                <p class="text-xs text-gray-400 dark:text-gray-500">
                    documents requis
                </p>
            </div>
        </div>
        <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-3 overflow-hidden">
            <div class="bg-gradient-to-r from-blue-500 to-blue-600 h-3 rounded-full transition-all duration-500" style="width: {{ completionPercent }}%"></div>
        </div>

        {% if missingDocuments is not empty %}
            <div class="mt-4 border-l-4 border-yellow-400 bg-yellow-50 dark:bg-yellow-900/20 p-4 rounded">
                <div class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-yellow-600 dark:text-yellow-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                    </svg>
                    <div class="flex-1">
                        <p class="font-medium text-yellow-800 dark:text-yellow-300">Documents à fournir en priorité:</p>
                        <ul class="mt-2 space-y-1">
                            {% for item in missingDocuments %}
                                <li class="text-sm text-yellow-700 dark:text-yellow-400 flex items-center gap-2">
                                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v3.586L7.707 9.293a1 1 0 00-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 10.586V7z" clip-rule="evenodd"></path>
                                    </svg>
                                    <span>{{ item.label }}</span>
                                    {% if item.priority %}
                                        <span class="text-xs px-2 py-0.5 bg-yellow-200 dark:bg-yellow-700 text-yellow-800 dark:text-yellow-200 rounded-full font-medium">{{ item.priority }}</span>
                                    {% endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        {% endif %}
    </section>

    {# Categories with document cards #}
    {% for category in categories %}
        {% set requiredTotal = category.completion.required_total ?? 0 %}
        {% set requiredDone = category.completion.required_completed ?? 0 %}
        {% set categoryPercent = category.completion.percentage ?? (requiredTotal ? (requiredDone / requiredTotal * 100)|round(1) : 100) %}

        <section class="bg-white dark:bg-gray-800 shadow-sm rounded-lg overflow-hidden">
            {# Category header #}
            <div class="px-6 py-4 bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-700 dark:to-gray-800 border-b border-gray-200 dark:border-gray-700">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                    <div class="flex-1">
                        <h2 class="text-xl font-semibold text-gray-900 dark:text-white flex items-center gap-2">
                            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            {{ category.label }}
                        </h2>
                        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                            {{ requiredDone }}/{{ requiredTotal }} documents requis complétés
                        </p>
                    </div>
                    <div class="w-full md:w-64">
                        <div class="flex items-center justify-between text-xs text-gray-600 dark:text-gray-400 mb-2">
                            <span class="font-medium">Progression</span>
                            <span class="font-semibold">{{ categoryPercent }}%</span>
                        </div>
                        <div class="w-full bg-gray-200 dark:bg-gray-600 rounded-full h-2.5 overflow-hidden">
                            <div class="bg-gradient-to-r from-emerald-500 to-green-600 h-2.5 rounded-full transition-all duration-500" style="width: {{ categoryPercent }}%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="p-6">
                {# Required documents - Card grid #}
                {% if category.required is not empty %}
                <div class="mb-6">
                    <h3 class="text-sm font-semibold text-gray-700 dark:text-gray-300 uppercase tracking-wide mb-4 flex items-center gap-2">
                        <span class="w-2 h-2 bg-red-500 rounded-full"></span>
                        Documents requis
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        {% for item in category.required %}
                            {% set docs = documentsByType[item.type] ?? [] %}
                            {% set firstDoc = docs|first %}
                            <div class="border {{ item.uploaded ? 'border-green-200 bg-green-50 dark:bg-green-900/10 dark:border-green-800' : 'border-red-200 bg-red-50 dark:bg-red-900/10 dark:border-red-800' }} rounded-lg p-4 hover:shadow-md transition-shadow">
                                <div class="flex items-start gap-3 mb-3">
                                    {% include 'components/documents/_document_type_icon.html.twig' with {
                                        'type': item.type,
                                        'iconClass': 'w-8 h-8'
                                    } %}
                                    <div class="flex-1 min-w-0">
                                        <h4 class="font-medium text-gray-900 dark:text-white text-sm truncate">{{ item.label }}</h4>
                                        {% if item.uploaded and firstDoc %}
                                            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                                                {{ firstDoc.uploadedAt ? firstDoc.uploadedAt|date('d/m/Y') : 'N/A' }}
                                            </p>
                                            {% include 'components/documents/_document_status_badge.html.twig' with {
                                                'status': firstDoc.status,
                                                'isArchived': firstDoc.isArchived|default(false)
                                            } %}
                                        {% else %}
                                            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400 mt-1">
                                                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                                                </svg>
                                                Manquant
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="flex flex-wrap gap-2">
                                    {% if item.uploaded and firstDoc %}
                                        <button type="button" onclick="viewDocument({{ firstDoc.id }})"
                                                class="flex-1 inline-flex items-center justify-center px-3 py-1.5 bg-blue-600 hover:bg-blue-700 text-white text-xs rounded-lg transition-colors">
                                            <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                            </svg>
                                            Voir
                                        </button>
                                        <a href="{{ path('app_profile_documents_download', {id: firstDoc.id}) }}"
                                           class="flex-1 inline-flex items-center justify-center px-3 py-1.5 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 text-xs rounded-lg transition-colors">
                                            <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                                            </svg>
                                            DL
                                        </a>
                                        {% if is_granted('DOCUMENT_REPLACE', firstDoc) %}
                                            <button type="button" onclick="replaceDocument({{ firstDoc.id }}, '{{ item.label|e('js') }}')"
                                                    class="w-full inline-flex items-center justify-center px-3 py-1.5 bg-yellow-100 hover:bg-yellow-200 dark:bg-yellow-900/30 dark:hover:bg-yellow-900/50 text-yellow-700 dark:text-yellow-400 text-xs rounded-lg transition-colors">
                                                <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
                                                </svg>
                                                Remplacer
                                            </button>
                                        {% endif %}
                                        {% if is_granted('DOCUMENT_DELETE', firstDoc) %}
                                            <button type="button" onclick="deleteDocument({{ firstDoc.id }}, '{{ item.label|e('js') }}')"
                                                    class="w-full inline-flex items-center justify-center px-3 py-1.5 bg-red-100 hover:bg-red-200 dark:bg-red-900/30 dark:hover:bg-red-900/50 text-red-700 dark:text-red-400 text-xs rounded-lg transition-colors">
                                                <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                </svg>
                                                Supprimer
                                            </button>
                                        {% endif %}
                                    {% else %}
                                        <button type="button" onclick="openUploadModal('{{ item.type }}', '{{ item.label|e('js') }}')"
                                                class="w-full inline-flex items-center justify-center px-3 py-1.5 bg-blue-600 hover:bg-blue-700 text-white text-xs rounded-lg font-medium transition-colors">
                                            <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                            </svg>
                                            Ajouter
                                        </button>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}

                {# Optional documents - Card grid #}
                {% if category.optional is not empty %}
                <div>
                    <h3 class="text-sm font-semibold text-gray-700 dark:text-gray-300 uppercase tracking-wide mb-4 flex items-center gap-2">
                        <span class="w-2 h-2 bg-gray-400 rounded-full"></span>
                        Documents optionnels
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        {% for item in category.optional %}
                            {% set docs = documentsByType[item.type] ?? [] %}
                            {% set firstDoc = docs|first %}
                            <div class="border border-dashed {{ item.uploaded ? 'border-gray-300 bg-gray-50 dark:bg-gray-700/50 dark:border-gray-600' : 'border-gray-200 bg-white dark:bg-gray-800 dark:border-gray-700' }} rounded-lg p-4 hover:shadow-md transition-shadow">
                                <div class="flex items-start gap-3 mb-3">
                                    {% include 'components/documents/_document_type_icon.html.twig' with {
                                        'type': item.type,
                                        'iconClass': 'w-8 h-8'
                                    } %}
                                    <div class="flex-1 min-w-0">
                                        <h4 class="font-medium text-gray-900 dark:text-white text-sm truncate">{{ item.label }}</h4>
                                        {% if item.uploaded and firstDoc %}
                                            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                                                {{ firstDoc.uploadedAt ? firstDoc.uploadedAt|date('d/m/Y') : 'N/A' }}
                                            </p>
                                            {% include 'components/documents/_document_status_badge.html.twig' with {
                                                'status': firstDoc.status,
                                                'isArchived': firstDoc.isArchived|default(false)
                                            } %}
                                        {% else %}
                                            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-400 mt-1">
                                                Optionnel
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="flex flex-wrap gap-2">
                                    {% if item.uploaded and firstDoc %}
                                        <button type="button" onclick="viewDocument({{ firstDoc.id }})"
                                                class="flex-1 inline-flex items-center justify-center px-3 py-1.5 bg-blue-600 hover:bg-blue-700 text-white text-xs rounded-lg transition-colors">
                                            <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                            </svg>
                                            Voir
                                        </button>
                                        <a href="{{ path('app_profile_documents_download', {id: firstDoc.id}) }}"
                                           class="flex-1 inline-flex items-center justify-center px-3 py-1.5 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 text-xs rounded-lg transition-colors">
                                            <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                                            </svg>
                                            DL
                                        </a>
                                    {% else %}
                                        <button type="button" onclick="openUploadModal('{{ item.type }}', '{{ item.label|e('js') }}')"
                                                class="w-full inline-flex items-center justify-center px-3 py-1.5 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 text-xs rounded-lg transition-colors">
                                            <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                            </svg>
                                            Ajouter
                                        </button>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
            </div>
        </section>
    {% endfor %}

    {# Help section #}
    <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-6">
        <div class="flex gap-4">
            <svg class="w-6 h-6 text-blue-600 dark:text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
                <h3 class="text-sm font-semibold text-blue-900 dark:text-blue-300 mb-2">
                    Besoin d'aide ?
                </h3>
                <p class="text-sm text-blue-800 dark:text-blue-400">
                    Pour toute question concernant vos documents, contactez le service RH :
                    <a class="underline font-medium hover:text-blue-600" href="mailto:rh@newlife.com">rh@newlife.com</a>
                </p>
            </div>
        </div>
    </div>
</div>

{# Upload Modal #}
<div id="uploadModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 flex items-center justify-between">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Ajouter un document</h3>
            <button type="button" onclick="closeUploadModal()"
                    class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
        <form method="post" action="{{ path('app_profile_documents_upload') }}" enctype="multipart/form-data" id="uploadForm">
            <div class="px-6 py-4 space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Type de document <span class="text-red-500">*</span>
                    </label>
                    <select name="type" id="uploadType" required
                            class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white">
                        <option value="">Sélectionnez un type...</option>
                        {# Options will be populated by JavaScript or you can list them #}
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Fichier <span class="text-red-500">*</span>
                    </label>
                    <div id="uploadDropZone"
                         class="relative border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-lg p-6 text-center hover:border-blue-500 transition-colors cursor-pointer">
                        <input type="file" name="file" id="uploadFileInput" required accept=".pdf,.jpg,.jpeg,.png,.doc,.docx"
                               class="absolute inset-0 w-full h-full opacity-0 cursor-pointer">
                        <div id="uploadDropContent">
                            <svg class="w-12 h-12 mx-auto text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                            </svg>
                            <p class="text-sm text-gray-600 dark:text-gray-400">
                                Glissez-déposez ou cliquez pour sélectionner
                            </p>
                            <p class="text-xs text-gray-400 mt-1">PDF, JPG, PNG, DOC, DOCX (max. 10 MB)</p>
                        </div>
                        <div id="uploadFilePreview" class="hidden">
                            <div class="flex items-center justify-center gap-3">
                                <svg class="w-10 h-10 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd"></path>
                                </svg>
                                <div class="text-left">
                                    <p id="uploadFileName" class="text-sm font-medium text-gray-900 dark:text-white"></p>
                                    <p id="uploadFileSize" class="text-xs text-gray-500"></p>
                                </div>
                                <button type="button" onclick="clearUploadFile()" class="text-red-600 hover:text-red-700">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Commentaire (optionnel)
                    </label>
                    <textarea name="commentaire" rows="2"
                              class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white"></textarea>
                </div>
            </div>
            <div class="px-6 py-4 bg-gray-50 dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700 flex justify-end gap-3">
                <button type="button" onclick="closeUploadModal()"
                        class="px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors">
                    Annuler
                </button>
                <button type="submit"
                        class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors">
                    Téléverser
                </button>
            </div>
        </form>
    </div>
</div>

{# Replace Modal #}
<div id="replaceModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Remplacer le document</h3>
        </div>
        <form method="post" id="replaceForm" enctype="multipart/form-data">
            <div class="px-6 py-4 space-y-4">
                <p class="text-sm text-gray-600 dark:text-gray-300">
                    Le fichier actuel sera remplacé. L'ancienne version sera conservée dans l'historique.
                </p>
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
