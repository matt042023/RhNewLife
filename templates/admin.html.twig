{# Layout principal pour les pages d'administration #}
{% extends 'layout/dashboard_base.html.twig' %}

{% block page_header %}
    <div class="px-4 py-6 lg:px-6">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between">
            {# Page title #}
            <div class="flex-1 min-w-0">
                <h1 class="text-2xl md:text-3xl font-bold text-white mb-1">
                    {% block admin_title %}Administration{% endblock %}
                </h1>
                <p class="text-blue-100 text-sm md:text-base">
                    {% block admin_subtitle %}Gestion RH{% endblock %}
                </p>
            </div>

            {# Quick actions #}
            <div class="mt-4 md:mt-0 md:ml-4 flex-shrink-0">
                {% block admin_actions %}
                    {# Child templates can add action buttons here #}
                {% endblock %}
            </div>
        </div>

        {# Stats cards (optional) #}
        {% block admin_stats %}
            {# Child templates can add stats cards here #}
        {% endblock %}
    </div>
{% endblock %}

{% block dashboard_content %}
    {% block admin_content %}
        {# Page content goes here #}
    {% endblock %}
{% endblock %}
